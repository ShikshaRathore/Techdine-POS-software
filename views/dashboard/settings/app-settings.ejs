<!-- App Settings Tab -->
<div id="app-settings" class="settings-content hidden">
  <div
    class="bg-white shadow-sm sm:shadow rounded-lg sm:rounded-xl p-4 sm:p-6 lg:p-8"
  >
    <!-- Header -->
    <div class="mb-6 sm:mb-8">
      <div class="flex items-start space-x-3 mb-2">
        <div
          class="flex-shrink-0 w-10 h-10 sm:w-12 sm:h-12 bg-orange-100 rounded-lg flex items-center justify-center"
        >
          <svg
            class="w-5 h-5 sm:w-6 sm:h-6 text-orange-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
            ></path>
          </svg>
        </div>
        <div>
          <h2 class="text-xl sm:text-2xl font-bold text-gray-900">
            Country, Timezone & Currency
          </h2>
          <p class="text-xs sm:text-sm text-gray-500 mt-1">
            Configure regional and currency settings
          </p>
        </div>
      </div>
    </div>

    <form
      action="/dashboard/<%= branchId %>/settings/app-settings"
      method="POST"
    >
      <div class="space-y-4 sm:space-y-5">
        <!-- Country -->
        <div>
          <label
            for="country"
            class="block text-xs sm:text-sm font-medium text-gray-700 mb-1.5"
          >
            Country <span class="text-red-500">*</span>
          </label>
          <div class="relative">
            <div
              class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
            >
              <svg
                class="h-4 w-4 sm:h-5 sm:w-5 text-gray-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
            </div>
            <select
              id="country"
              name="country"
              class="w-full pl-9 sm:pl-10 pr-3 py-2.5 sm:py-3 text-sm sm:text-base border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-all appearance-none bg-white"
              required
            >
              <option value="India" <%= branch.country === 'India' ? 'selected'
              : '' %>>India <option value="USA" <%= branch.country === 'USA' ?
              'selected' : '' %>>United States <option value="UK" <%=
              branch.country === 'UK' ? 'selected' : '' %>>United Kingdom
              <option value="Canada" <%= branch.country === 'Canada' ?
              'selected' : '' %>>Canada <option value="Australia" <%=
              branch.country === 'Australia' ? 'selected' : '' %>>Australia
            </select>
            <div
              class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none"
            >
              <svg
                class="h-4 w-4 sm:h-5 sm:w-5 text-gray-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 9l-7 7-7-7"
                ></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Timezone -->
        <div>
          <label
            for="timezone"
            class="block text-xs sm:text-sm font-medium text-gray-700 mb-1.5"
          >
            Time Zone <span class="text-red-500">*</span>
          </label>
          <div class="relative">
            <div
              class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
            >
              <svg
                class="h-4 w-4 sm:h-5 sm:w-5 text-gray-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
            </div>
            <select
              id="timezone"
              name="timezone"
              class="w-full pl-9 sm:pl-10 pr-3 py-2.5 sm:py-3 text-sm sm:text-base border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-all appearance-none bg-white"
              required
            >
              <option value="Asia/Kolkata" <%= branch.timezone ===
              'Asia/Kolkata' ? 'selected' : '' %>>Asia/Kolkata <option
              value="America/New_York" <%= branch.timezone ===
              'America/New_York' ? 'selected' : '' %>>America/New_York <option
              value="Europe/London" <%= branch.timezone === 'Europe/London' ?
              'selected' : '' %>>Europe/London <option value="Asia/Dubai" <%=
              branch.timezone === 'Asia/Dubai' ? 'selected' : '' %>>Asia/Dubai
              <option value="Australia/Sydney" <%= branch.timezone ===
              'Australia/Sydney' ? 'selected' : '' %>>Australia/Sydney
            </select>
            <div
              class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none"
            >
              <svg
                class="h-4 w-4 sm:h-5 sm:w-5 text-gray-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 9l-7 7-7-7"
                ></path>
              </svg>
            </div>
          </div>
        </div>

        <!-- Currency -->
        <div>
          <label
            for="currency"
            class="block text-xs sm:text-sm font-medium text-gray-700 mb-1.5"
          >
            Currency <span class="text-red-500">*</span>
          </label>
          <div class="relative">
            <div
              class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
            >
              <svg
                class="h-4 w-4 sm:h-5 sm:w-5 text-gray-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
            </div>
            <select
              id="currency"
              name="currency"
              class="w-full pl-9 sm:pl-10 pr-3 py-2.5 sm:py-3 text-sm sm:text-base border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-all appearance-none bg-white"
              required
            >
              <option value="USD" <%= branch.defaultCurrency === 'USD' ?
              'selected' : '' %>>Dollars (USD) <option value="INR" <%=
              branch.defaultCurrency === 'INR' ? 'selected' : '' %>>Rupee (INR)
              <option value="GBP" <%= branch.defaultCurrency === 'GBP' ?
              'selected' : '' %>>Pounds (GBP) <option value="EUR" <%=
              branch.defaultCurrency === 'EUR' ? 'selected' : '' %>>Euros (EUR)
            </select>
            <div
              class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none"
            >
              <svg
                class="h-4 w-4 sm:h-5 sm:w-5 text-gray-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 9l-7 7-7-7"
                ></path>
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div
        class="mt-6 sm:mt-8 flex flex-col-reverse sm:flex-row gap-3 sm:gap-4"
      >
        <button
          type="submit"
          class="w-full sm:w-auto px-6 py-2.5 sm:py-3 bg-orange-600 hover:bg-orange-700 text-white text-sm sm:text-base font-semibold rounded-lg shadow-sm hover:shadow-md focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition-all flex items-center justify-center space-x-2"
        >
          <svg
            class="w-4 h-4 sm:w-5 sm:h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 13l4 4L19 7"
            ></path>
          </svg>
          <span>Save Changes</span>
        </button>
      </div>
    </form>
  </div>
</div>
