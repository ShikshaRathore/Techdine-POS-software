<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Table View</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-gray-50">
    <div class="max-w-7xl mx-auto p-6">
      <!-- Header -->
      <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-semibold text-gray-800">
          Tables - <%= branch ? branch.branchName : "Unknown Branch" %>
        </h1>
        <form action="/tables/addTable/<%= branchId %>" method="GET">
          <input
            type="hidden"
            name="branchId"
            value="<%= branch ? branch._id : '' %>"
          />
          <button
            type="submit"
            class="bg-orange-500 hover:bg-orange-600 text-white font-semibold px-6 py-3 rounded-lg transition-colors"
          >
            Add Table
          </button>
        </form>
      </div>

      <!-- Filter Section -->
      <div class="flex gap-4 items-center mb-8">
        <div class="relative">
          <button
            id="availabilityFilterBtn"
            class="bg-white border border-gray-300 px-5 py-2.5 rounded-lg text-sm text-gray-600 hover:bg-gray-50 transition-colors flex items-center gap-2"
          >
            Filter by Availability
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"
              ></path>
            </svg>
          </button>
          <div
            id="availabilityDropdown"
            class="hidden absolute top-full left-0 mt-2 bg-white border border-gray-200 rounded-lg shadow-lg min-w-[200px] z-50"
          >
            <div
              class="dropdown-item bg-orange-50 text-orange-600 font-medium px-4 py-2.5 cursor-pointer text-sm flex items-center gap-2"
              data-status="all"
            >
              All Statuses
            </div>
            <div
              class="dropdown-item hover:bg-gray-50 px-4 py-2.5 cursor-pointer text-sm text-gray-700"
              data-status="Available"
            >
              Available
            </div>
            <div
              class="dropdown-item hover:bg-gray-50 px-4 py-2.5 cursor-pointer text-sm text-gray-700"
              data-status="Occupied"
            >
              Running
            </div>
            <div
              class="dropdown-item hover:bg-gray-50 px-4 py-2.5 cursor-pointer text-sm text-gray-700"
              data-status="Reserved"
            >
              Reserved
            </div>
          </div>
        </div>
      </div>

      <!-- Area Tabs -->
      <div class="flex gap-3 mb-8 flex-wrap">
        <button
          class="area-tab bg-orange-100 text-orange-600 border border-orange-200 font-medium px-5 py-2 rounded-full text-sm transition-all"
          data-area="all"
        >
          All Areas
        </button>

        <% if (areas && areas.length > 0) { %> <% areas.forEach(area => { %>
        <button
          class="area-tab bg-white text-gray-600 border border-gray-300 px-5 py-2 rounded-full text-sm hover:bg-gray-50 transition-all"
          data-area="<%= area.name.toLowerCase().replace(/\s+/g, '-') %>"
        >
          <%= area.name %>
        </button>
        <% }) %> <% } %>
      </div>

      <!-- Tables Container -->
      <div id="tablesContainer">
        <% if (areas && areas.length > 0) { %> <% areas.forEach(area => { %>
        <div
          class="area-section mb-10"
          data-area-id="<%= area.name.toLowerCase().replace(/\s+/g, '-') %>"
        >
          <div class="flex items-center gap-4 mb-5">
            <span class="text-lg font-semibold text-gray-800">
              <%= area.name %>
            </span>
            <span
              class="table-count bg-gray-100 px-3 py-1 rounded-full text-xs text-gray-600"
            >
              <%= area.tables.length %> Table(s)
            </span>
          </div>

          <div
            class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-5"
          >
            <% if (area.tables && area.tables.length > 0) { %> <%
            area.tables.forEach(table => { %>
            <div
              class="table-card bg-white border border-gray-200 rounded-lg p-5 hover:shadow-lg transition-all hover:-translate-y-1"
              data-status="<%= table.availabilityStatus %>"
              data-area="<%= area.name.toLowerCase().replace(/\s+/g, '-') %>"
            >
              <div class="flex justify-between items-start mb-4">
                <div
                  class="<% if (table.availabilityStatus === 'Available') { %> bg-green-100 text-green-700 <% } else if (table.availabilityStatus === 'Occupied') { %> bg-blue-100 text-blue-700 <% } else { %> bg-red-100 text-red-700 <% } %> font-semibold px-4 py-3 rounded-lg text-base"
                >
                  <%= table.tableCode %>
                </div>

                <button
                  class="edit-table-btn w-9 h-9 border border-gray-300 bg-white rounded-md hover:bg-gray-50 transition-colors flex items-center justify-center"
                  data-table-id="<%= table._id %>"
                >
                  <svg
                    class="w-4 h-4 text-gray-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"
                    ></path>
                  </svg>
                </button>
              </div>
              <div class="text-sm text-gray-600">
                <%= table.seatingCapacity %> Seat(s)
              </div>
            </div>
            <% }) %> <% } else { %>
            <div class="text-sm text-gray-500 col-span-full">
              No tables found in this area.
            </div>
            <% } %>
          </div>
        </div>
        <% }) %> <% } else { %>
        <div class="text-center text-gray-500 py-10">
          No areas found for this branch.
        </div>
        <% } %>
      </div>
    </div>

    <!-- Status Legend -->
    <div
      class="fixed bottom-8 right-8 bg-white px-5 py-4 rounded-lg shadow-xl flex gap-6"
    >
      <div class="flex items-center gap-2 text-sm text-gray-600">
        <span class="w-3 h-3 rounded-full bg-green-600"></span>
        <span>Available</span>
      </div>
      <div class="flex items-center gap-2 text-sm text-gray-600">
        <span class="w-3 h-3 rounded-full bg-blue-600"></span>
        <span>Running</span>
      </div>
      <div class="flex items-center gap-2 text-sm text-gray-600">
        <span class="w-3 h-3 rounded-full bg-red-600"></span>
        <span>Reserved</span>
      </div>
    </div>

    <!-- Edit Table Modal -->
    <div
      id="editTableModal"
      class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4"
    >
      <div
        class="bg-white rounded-xl shadow-2xl w-full max-w-md transform transition-all"
      >
        <div
          class="flex items-center justify-between px-6 py-4 border-b border-gray-200"
        >
          <h2 class="text-xl font-semibold text-gray-800">Edit Table</h2>
          <button
            id="closeModalBtn"
            class="text-gray-400 hover:text-gray-600 transition-colors"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"
              ></path>
            </svg>
          </button>
        </div>

        <form id="editTableForm" method="POST">
          <div class="px-6 py-5 space-y-5">
            <!-- Choose Area -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Choose Area
              </label>
              <select
                name="area"
                id="editAreaSelect"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all"
                required
              >
                <option value="">Select Area</option>
              </select>
            </div>

            <!-- Table Code -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Table Code
              </label>
              <input
                type="text"
                name="tableCode"
                id="editTableCode"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all"
                placeholder="e.g., T01"
                required
              />
            </div>

            <!-- Seating Capacity -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Seating Capacity
              </label>
              <input
                type="number"
                name="seatingCapacity"
                id="editSeatingCapacity"
                min="1"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all"
                placeholder="e.g., 6"
                required
              />
            </div>

            <!-- Availability Status -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Availability Status
              </label>
              <select
                name="availabilityStatus"
                id="editAvailabilityStatus"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all"
                required
              >
                <option value="Available">Available</option>
                <option value="Occupied">Occupied</option>
                <option value="Reserved">Reserved</option>
              </select>
            </div>

            <!-- Status -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Status
              </label>
              <div class="flex gap-3">
                <button
                  type="button"
                  id="editStatusActive"
                  class="status-btn flex-1 px-4 py-2.5 border-2 border-orange-500 bg-orange-500 text-white rounded-lg font-medium transition-all"
                  data-status="Active"
                >
                  Active
                </button>
                <button
                  type="button"
                  id="editStatusInactive"
                  class="status-btn flex-1 px-4 py-2.5 border-2 border-gray-300 bg-white text-gray-700 rounded-lg font-medium transition-all"
                  data-status="Inactive"
                >
                  Inactive
                </button>
              </div>
              <input
                type="hidden"
                name="status"
                id="editStatusInput"
                value="Active"
              />
            </div>
          </div>

          <!-- Form Actions -->
          <div class="flex gap-3 px-6 py-4 bg-gray-50 rounded-b-xl">
            <button
              type="submit"
              class="flex-1 bg-orange-500 hover:bg-orange-600 text-white font-semibold px-6 py-3 rounded-lg transition-colors"
            >
              Save Changes
            </button>
            <button
              type="button"
              id="deleteTableBtn"
              class="px-6 py-3 border-2 border-red-500 text-red-500 hover:bg-red-50 font-semibold rounded-lg transition-colors"
            >
              ðŸ—‘ Delete
            </button>
            <button
              type="button"
              id="cancelModalBtn"
              class="px-6 py-3 border-2 border-gray-300 text-gray-700 hover:bg-gray-50 font-semibold rounded-lg transition-colors"
            >
              Cancel
            </button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
