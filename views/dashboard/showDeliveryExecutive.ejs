<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delivery Executive Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
  </head>
  <body class="bg-gray-50 min-h-screen">
    <div class="container mx-auto px-4 py-6 md:py-8 max-w-7xl">
      <!-- Header -->
      <div class="mb-6 md:mb-8">
        <h1 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">
          Delivery Executive
        </h1>

        <!-- Search and Actions -->
        <div class="flex flex-col sm:flex-row gap-3 md:gap-4">
          <div class="flex-1">
            <div class="relative">
              <input
                type="text"
                id="searchInput"
                placeholder="Search by name, email or phone number"
                class="w-full px-4 py-3 pl-11 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all"
              />
              <i
                class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"
              ></i>
            </div>
          </div>
          <div class="flex gap-3">
            <a
              href="/deliveryExecutive/export/<%= branchId %>"
              class="flex-1 sm:flex-none px-6 py-3 bg-white border border-gray-300 rounded-lg font-medium text-gray-700 hover:bg-gray-50 transition-colors flex items-center justify-center gap-2"
            >
              <i class="fas fa-download"></i>
              <span>Export</span>
            </a>
            <a
              href="/deliveryExecutive/add/<%= branchId %>"
              class="flex-1 sm:flex-none px-6 py-3 bg-orange-600 text-white rounded-lg font-medium hover:bg-orange-700 transition-colors flex items-center justify-center gap-2"
            >
              <i class="fas fa-plus"></i>
              <span>Add Executive</span>
            </a>
          </div>
        </div>
      </div>

      <!-- Desktop Table View -->
      <div
        class="hidden md:block bg-white rounded-lg shadow-sm overflow-hidden"
      >
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th
                  class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider"
                >
                  Member Name
                </th>
                <th
                  class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider"
                >
                  Phone
                </th>
                <th
                  class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider"
                >
                  Branch
                </th>
                <th
                  class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider"
                >
                  Total Orders
                </th>
                <th
                  class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider"
                >
                  Status
                </th>
                <th
                  class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider"
                >
                  Action
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% if (executives && executives.length > 0) { %> <%
              executives.forEach(function(exec) { %>
              <tr
                class="hover:bg-gray-50 transition-colors"
                data-executive-id="<%= exec._id %>"
              >
                <td class="px-6 py-4">
                  <div class="flex items-center gap-3">
                    <div
                      class="w-10 h-10 bg-orange-100 rounded-full flex items-center justify-center flex-shrink-0"
                    >
                      <span class="text-orange-600 font-semibold"
                        ><%= exec.name.charAt(0).toUpperCase() %></span
                      >
                    </div>
                    <div>
                      <div class="font-medium text-gray-900">
                        <%= exec.name %>
                      </div>
                      <div class="text-sm text-gray-500"><%= exec.email %></div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 text-gray-700"><%= exec.phone %></td>
                <td class="px-6 py-4">
                  <% if (exec.branch) { %>
                  <span
                    class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-medium bg-blue-50 text-blue-700"
                  >
                    <i class="fas fa-building mr-1.5"></i>
                    <%= exec.branch.name || 'N/A' %>
                  </span>
                  <% } else { %>
                  <span class="text-gray-400 text-sm">Not assigned</span>
                  <% } %>
                </td>
                <td class="px-6 py-4">
                  <span class="font-semibold text-gray-900"
                    ><%= exec.totalOrders || 0 %></span
                  >
                </td>
                <td class="px-6 py-4">
                  <% if (exec.status === 'active') { %>
                  <span
                    class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800"
                  >
                    <span
                      class="w-1.5 h-1.5 bg-green-500 rounded-full mr-2"
                    ></span>
                    Active
                  </span>
                  <% } else if (exec.status === 'inactive') { %>
                  <span
                    class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800"
                  >
                    <span
                      class="w-1.5 h-1.5 bg-gray-500 rounded-full mr-2"
                    ></span>
                    Inactive
                  </span>
                  <% } else if (exec.status === 'blocked') { %>
                  <span
                    class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800"
                  >
                    <span
                      class="w-1.5 h-1.5 bg-red-500 rounded-full mr-2"
                    ></span>
                    Blocked
                  </span>
                  <% } %>
                </td>
                <td class="px-6 py-4">
                  <div class="flex items-center gap-2">
                    <a
                      href="/deliveryExecutive/edit/<%= exec._id %>/<%= branchId %>"
                      class="p-2 text-blue-600 hover:bg-blue-50 rounded-lg transition-colors"
                      title="Edit"
                    >
                      <i class="fas fa-edit"></i>
                    </a>
                    <button
                      onclick="deleteExecutive('<%= exec._id %>', '<%= branchId %>')"
                      class="p-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors"
                      title="Delete"
                    >
                      <i class="fas fa-trash"></i>
                    </button>
                    <a
                      href="/deliveryExecutive/view/<%= exec._id %>/<%= branchId %>"
                      class="p-2 text-gray-600 hover:bg-gray-100 rounded-lg transition-colors"
                      title="View Details"
                    >
                      <i class="fas fa-eye"></i>
                    </a>
                  </div>
                </td>
              </tr>
              <% }); %> <% } else { %>
              <tr>
                <td colspan="6" class="px-6 py-16 text-center">
                  <div class="flex flex-col items-center justify-center">
                    <i class="fas fa-users text-gray-300 text-5xl mb-4"></i>
                    <p class="text-gray-500 text-lg font-medium">
                      No member found.
                    </p>
                    <p class="text-gray-400 text-sm mt-1">
                      Add your first delivery executive to get started.
                    </p>
                  </div>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Mobile Card View -->
      <div class="md:hidden space-y-4">
        <% if (executives && executives.length > 0) { %> <%
        executives.forEach(function(exec) { %>
        <div
          class="bg-white rounded-lg shadow-sm p-4 border border-gray-200"
          data-executive-id="<%= exec._id %>"
        >
          <div class="flex items-start justify-between mb-3">
            <div class="flex items-center gap-3">
              <div
                class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center flex-shrink-0"
              >
                <span class="text-orange-600 font-semibold text-lg"
                  ><%= exec.name.charAt(0).toUpperCase() %></span
                >
              </div>
              <div>
                <div class="font-semibold text-gray-900"><%= exec.name %></div>
                <div class="text-sm text-gray-500"><%= exec.email %></div>
              </div>
            </div>
            <% if (exec.status === 'active') { %>
            <span
              class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800"
            >
              <span class="w-1.5 h-1.5 bg-green-500 rounded-full mr-1.5"></span>
              Active
            </span>
            <% } else if (exec.status === 'inactive') { %>
            <span
              class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800"
            >
              <span class="w-1.5 h-1.5 bg-gray-500 rounded-full mr-1.5"></span>
              Inactive
            </span>
            <% } else if (exec.status === 'blocked') { %>
            <span
              class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800"
            >
              <span class="w-1.5 h-1.5 bg-red-500 rounded-full mr-1.5"></span>
              Blocked
            </span>
            <% } %>
          </div>

          <div
            class="grid grid-cols-2 gap-3 mb-3 pt-3 border-t border-gray-100"
          >
            <div>
              <div class="text-xs text-gray-500 mb-1">Phone</div>
              <div class="text-sm font-medium text-gray-900">
                <%= exec.phone %>
              </div>
            </div>
            <div>
              <div class="text-xs text-gray-500 mb-1">Total Orders</div>
              <div class="text-sm font-semibold text-gray-900">
                <%= exec.totalOrders || 0 %>
              </div>
            </div>
          </div>

          <% if (exec.branch) { %>
          <div class="mb-3">
            <div class="text-xs text-gray-500 mb-1">Branch</div>
            <span
              class="inline-flex items-center px-2.5 py-1 rounded-md text-xs font-medium bg-blue-50 text-blue-700"
            >
              <i class="fas fa-building mr-1.5"></i>
              <%= exec.branch.name || 'N/A' %>
            </span>
          </div>
          <% } %>

          <div class="flex gap-2 pt-3 border-t border-gray-100">
            <a
              href="/deliveryExecutive/edit/<%= exec._id %>/<%= branchId %>"
              class="flex-1 px-4 py-2 bg-blue-50 text-blue-600 rounded-lg font-medium hover:bg-blue-100 transition-colors flex items-center justify-center gap-2"
            >
              <i class="fas fa-edit"></i>
              <span>Edit</span>
            </a>
            <button
              onclick="deleteExecutive('<%= exec._id %>', '<%= branchId %>')"
              class="flex-1 px-4 py-2 bg-red-50 text-red-600 rounded-lg font-medium hover:bg-red-100 transition-colors flex items-center justify-center gap-2"
            >
              <i class="fas fa-trash"></i>
              <span>Delete</span>
            </button>
          </div>
        </div>
        <% }); %> <% } else { %>
        <div class="bg-white rounded-lg shadow-sm p-8 text-center">
          <i class="fas fa-users text-gray-300 text-5xl mb-4"></i>
          <p class="text-gray-500 text-lg font-medium">No member found.</p>
          <p class="text-gray-400 text-sm mt-1">
            Add your first delivery executive to get started.
          </p>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
