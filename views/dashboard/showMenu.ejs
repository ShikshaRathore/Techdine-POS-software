<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rajbhog - Restaurant Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Inter", sans-serif;
      }
      @media (min-width: 768px) {
        .compact-container {
          max-width: 1400px;
        }
      }
      .compact-header {
        margin-bottom: 1.5rem;
      }
      .compact-search-section {
        margin-bottom: 1.5rem;
      }
      .compact-cards {
        margin-bottom: 1.5rem;
      }
      @media (min-width: 1024px) {
        .menu-title {
          font-size: 1.875rem;
        }
        .card-title {
          font-size: 1.125rem;
        }
        .section-title {
          font-size: 1.5rem;
        }
      }
    </style>
  </head>
  <body class="bg-gray-50">
    <div class="p-4 sm:p-6 lg:p-8 max-w-7xl mx-auto">
      <div class="mb-6 sm:mb-8">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">
          Menus for Branch
        </h1>
      </div>

      <!-- Search and Add -->
      <div
        class="flex flex-col sm:flex-row items-stretch sm:items-center justify-between gap-3 mb-6"
      >
        <div class="flex-1 w-full sm:max-w-md">
          <input
            type="text"
            placeholder="Search your menu here"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500"
          />
        </div>
        <form action="/addMenu/<%= branchId %>" method="GET">
          <button
            class="w-full sm:w-auto bg-orange-600 hover:bg-orange-700 text-white font-semibold px-6 py-3 rounded-lg"
          >
            Add Menu
          </button>
        </form>
      </div>

      <!-- Menu Cards -->
      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-4 mb-6"
      >
        <% menus.forEach(menu => { %>
        <div
          class="bg-white border-2 border-gray-200 rounded-xl p-5 cursor-pointer hover:border-orange-500 hover:shadow-md active:scale-95 transition duration-200"
        >
          <div class="flex items-center">
            <svg
              class="w-7 h-7 mr-3 text-gray-700"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              />
            </svg>
            <div>
              <h3 class="text-lg font-bold text-gray-900">
                <%= menu.menuName %>
              </h3>
              <p class="text-gray-500 text-sm">
                <%= items.filter(i => i.menu && i.menu._id.toString() ===
                menu._id.toString()).length %> Item(s)
              </p>
            </div>
          </div>
        </div>
        <% }) %>
      </div>

      <!-- Menu Item Section -->
      <% menus.forEach(menu => { %>
      <div
        class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6"
      >
        <div
          class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-3 mb-6 pb-4 border-b border-gray-200"
        >
          <h2 class="text-xl sm:text-2xl font-bold text-gray-900">
            <%= menu.menuName %>
          </h2>
          <div class="flex gap-2">
            <button
              class="flex items-center px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50"
            >
              Update
            </button>
            <button
              class="flex items-center px-4 py-2 border border-red-300 text-red-600 rounded-lg hover:bg-red-50"
            >
              Delete
            </button>
          </div>
        </div>

        <!-- Table Header -->
        <div
          class="hidden md:grid md:grid-cols-12 gap-4 mb-4 text-xs lg:text-sm font-semibold text-gray-600 uppercase tracking-wider"
        >
          <div class="col-span-4">Item Name</div>
          <div class="col-span-2">Price</div>
          <div class="col-span-2">Category</div>
          <div class="col-span-2">Type</div>
          <div class="col-span-2 text-right">Action</div>
        </div>

        <!-- Items -->
        <div class="space-y-4">
          <% items.filter(item => item.menu && item.menu._id.toString() ===
          menu._id.toString()).forEach(item => { %>
          <div
            class="border border-gray-200 rounded-lg p-4 md:p-0 md:border-0 md:border-t md:border-gray-100 hover:bg-gray-50"
          >
            <div class="hidden md:grid md:grid-cols-12 gap-4 items-center py-4">
              <!-- Image + Details -->
              <div class="col-span-4 flex items-center">
                <div
                  class="w-14 h-14 bg-gray-100 rounded-lg mr-4 flex items-center justify-center overflow-hidden"
                >
                  <% if (item.menuItemImage && item.menuItemImage.url) { %>
                  <img
                    src="<%= item.menuItemImage.url %>"
                    alt="<%= item.itemName %>"
                    class="w-full h-full object-cover"
                  />
                  <% } else { %>
                  <svg
                    class="w-10 h-10 text-gray-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 6v6m0 0v6m0-6h6m-6 0H6"
                    />
                  </svg>
                  <% } %>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">
                    <%= item.itemName %>
                  </h4>
                  <% if (item.description) { %>
                  <p class="text-sm text-gray-500"><%= item.description %></p>
                  <% } %>
                </div>
              </div>

              <!-- Price -->
              <div class="col-span-2">₹<%= item.price %></div>

              <!-- Category -->
              <div class="col-span-2">
                <%= item.category && item.category.name ? item.category.name :
                '—' %>
              </div>

              <!-- Type -->
              <div class="col-span-2">
                <span
                  class="px-2 py-1 rounded-full text-xs font-medium <%= item.type === 'Veg' ? 'bg-green-100 text-green-700' : item.type === 'Non Veg' ? 'bg-red-100 text-red-700' : 'bg-yellow-100 text-yellow-700' %>"
                >
                  <%= item.type %>
                </span>
              </div>

              <!-- Actions -->
              <div class="col-span-2 flex justify-end gap-2">
                <button
                  class="px-3 py-2 border border-gray-300 rounded-lg hover:bg-gray-50"
                >
                  Update
                </button>
                <button
                  class="px-3 py-2 border border-red-300 text-red-600 rounded-lg hover:bg-red-50"
                >
                  Delete
                </button>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
