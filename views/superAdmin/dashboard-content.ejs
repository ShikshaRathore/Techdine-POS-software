<div class="space-y-6">
  <!-- Date Display -->
  <div class="flex items-center justify-between">
    <h2 class="text-lg font-semibold text-gray-800">Statistics</h2>
    <div class="flex items-center gap-2 text-sm text-gray-600">
      <i class="far fa-calendar"></i>
      <span>Thursday, 06 Nov, 09:04 AM</span>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <!-- Today's Restaurant Count -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-sm font-medium text-gray-600">
          Today's Restaurant Count
        </h3>
        <i class="fas fa-store text-orange-500 text-xl"></i>
      </div>
      <p class="text-3xl font-bold text-gray-800"><%= stats.todayCount %></p>
      <p class="text-xs text-gray-500 mt-2">0% Since yesterday</p>
    </div>

    <!-- Total Restaurant Count -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-sm font-medium text-gray-600">
          Total Restaurant Count
        </h3>
        <i class="fas fa-building text-blue-500 text-xl"></i>
      </div>
      <p class="text-3xl font-bold text-gray-800"><%= stats.totalCount %></p>
    </div>

    <!-- Total Free Restaurant Count -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-sm font-medium text-gray-600">
          Total Free Restaurant Count
        </h3>
        <i class="fas fa-gift text-green-500 text-xl"></i>
      </div>
      <p class="text-3xl font-bold text-gray-800"><%= stats.freeCount %></p>
    </div>

    <!-- Total Paid Restaurant Count -->
    <div class="bg-white rounded-lg shadow-sm p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-sm font-medium text-gray-600">
          Total Paid Restaurant Count
        </h3>
        <i class="fas fa-dollar-sign text-purple-500 text-xl"></i>
      </div>
      <p class="text-3xl font-bold text-gray-800"><%= stats.paidCount %></p>
    </div>
  </div>
</div>
