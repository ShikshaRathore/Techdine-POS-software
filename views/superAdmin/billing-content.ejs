<div class="space-y-6">
  <!-- Search Bar -->
  <div class="bg-white rounded-lg shadow-sm p-4">
    <input
      type="text"
      placeholder="Search payments by amount, merchant..."
      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
    />
  </div>

  <!-- Payments Table -->
  <div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50 border-b border-gray-200">
          <tr>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              ID
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Restaurant Name
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Package Details
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Billing Cycle
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Payment Date
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Next Payment Date
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Transaction ID
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Payment Gateway
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Amount
            </th>
            <th
              class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
            >
              Action
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% payments.forEach(payment => { %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= payment.id %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <a
                href="#"
                class="text-sm font-medium text-blue-600 hover:underline"
                ><%= payment.restaurant %></a
              >
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center gap-2">
                <span class="text-sm text-gray-900"
                  ><%= payment.package %></span
                >
                <% if (payment.package.includes('Trial')) { %>
                <span
                  class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800"
                >
                  <i class="fas fa-circle text-yellow-500 text-xs mr-1"></i>
                  Trial
                </span>
                <% } else if (payment.package.includes('Life Time')) { %>
                <span
                  class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800"
                >
                  <i class="fas fa-crown text-purple-500 text-xs mr-1"></i>
                  Lifetime
                </span>
                <% } %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= payment.cycle %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= payment.paymentDate %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= payment.nextPayment %>
            </td>
            <td
              class="px-6 py-4 whitespace-nowrap text-sm font-mono text-gray-600"
            >
              <%= payment.transactionId %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= payment.gateway %>
            </td>
            <td
              class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900"
            >
              <%= payment.amount %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              <button
                class="p-2 text-gray-600 hover:text-orange-600 hover:bg-orange-50 rounded-lg transition-colors"
              >
                <i class="fas fa-download"></i>
              </button>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
