<!-- Statistics Cards -->
<div
  id="statistics-section"
  class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 mb-6 sm:mb-8"
>
  <!-- Today's Earnings Card -->
  <div
    class="bg-gradient-to-br from-green-500 to-green-600 rounded-xl sm:rounded-2xl shadow-lg p-4 sm:p-6 text-white transform hover:scale-105 transition-transform"
  >
    <div class="flex items-center justify-between mb-3 sm:mb-4">
      <div
        class="w-10 h-10 sm:w-12 sm:h-12 bg-white bg-opacity-20 rounded-lg sm:rounded-xl flex items-center justify-center"
      >
        <svg
          class="w-5 h-5 sm:w-6 sm:h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          />
        </svg>
      </div>
      <% if (statistics && statistics.earningsChange > 0) { %>
      <div class="flex items-center space-x-1 text-xs sm:text-sm">
        <svg
          class="w-3 h-3 sm:w-4 sm:h-4 <%= statistics.earningsDirection === 'down' ? 'rotate-180' : '' %>"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z"
            clip-rule="evenodd"
          />
        </svg>
        <span class="font-medium"><%= statistics.earningsChange %>%</span>
      </div>
      <% } %>
    </div>
    <h3 class="text-xs sm:text-sm font-medium opacity-90 mb-1">
      Today's Earnings
    </h3>
    <p class="text-2xl sm:text-3xl font-bold mb-1">
      ‚Çπ<%= statistics ? statistics.todayEarnings : '0.00' %>
    </p>
    <p class="text-xs opacity-75">Since yesterday</p>
  </div>

  <!-- Today's Customers Card -->
  <div
    class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl sm:rounded-2xl shadow-lg p-4 sm:p-6 text-white transform hover:scale-105 transition-transform"
  >
    <div class="flex items-center justify-between mb-3 sm:mb-4">
      <div
        class="w-10 h-10 sm:w-12 sm:h-12 bg-white bg-opacity-20 rounded-lg sm:rounded-xl flex items-center justify-center"
      >
        <svg
          class="w-5 h-5 sm:w-6 sm:h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
          />
        </svg>
      </div>
      <% if (statistics && statistics.customersChange > 0) { %>
      <div class="flex items-center space-x-1 text-xs sm:text-sm">
        <svg
          class="w-3 h-3 sm:w-4 sm:h-4 <%= statistics.customersDirection === 'down' ? 'rotate-180' : '' %>"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z"
            clip-rule="evenodd"
          />
        </svg>
        <span class="font-medium"><%= statistics.customersChange %>%</span>
      </div>
      <% } else { %>
      <div class="flex items-center space-x-1 text-xs sm:text-sm">
        <span class="font-medium">0%</span>
      </div>
      <% } %>
    </div>
    <h3 class="text-xs sm:text-sm font-medium opacity-90 mb-1">
      Today's Customers
    </h3>
    <p class="text-2xl sm:text-3xl font-bold mb-1">
      <%= statistics ? statistics.todayCustomers : '0' %>
    </p>
    <p class="text-xs opacity-75">Since yesterday</p>
  </div>

  <!-- Average Daily Earnings Card -->
  <div
    class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl sm:rounded-2xl shadow-lg p-4 sm:p-6 text-white transform hover:scale-105 transition-transform"
  >
    <div class="flex items-center justify-between mb-3 sm:mb-4">
      <div
        class="w-10 h-10 sm:w-12 sm:h-12 bg-white bg-opacity-20 rounded-lg sm:rounded-xl flex items-center justify-center"
      >
        <svg
          class="w-5 h-5 sm:w-6 sm:h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
          />
        </svg>
      </div>
      <% if (statistics && statistics.avgEarningsChange > 0) { %>
      <div class="flex items-center space-x-1 text-xs sm:text-sm">
        <svg
          class="w-3 h-3 sm:w-4 sm:h-4 <%= statistics.avgEarningsDirection === 'down' ? 'rotate-180' : '' %>"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z"
            clip-rule="evenodd"
          />
        </svg>
        <span class="font-medium"><%= statistics.avgEarningsChange %>%</span>
      </div>
      <% } %>
    </div>
    <h3 class="text-xs sm:text-sm font-medium opacity-90 mb-1">
      Avg Daily Earnings
    </h3>
    <p class="text-2xl sm:text-3xl font-bold mb-1">
      ‚Çπ<%= statistics ? statistics.avgDailyEarnings : '0.00' %>
    </p>
    <p class="text-xs opacity-75">
      <%= statistics ? statistics.currentMonth : 'Month' %> average
    </p>
  </div>

  <!-- Sales This Month Card -->
  <div
    class="bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl sm:rounded-2xl shadow-lg p-4 sm:p-6 text-white transform hover:scale-105 transition-transform"
  >
    <div class="flex items-center justify-between mb-3 sm:mb-4">
      <div
        class="w-10 h-10 sm:w-12 sm:h-12 bg-white bg-opacity-20 rounded-lg sm:rounded-xl flex items-center justify-center"
      >
        <svg
          class="w-5 h-5 sm:w-6 sm:h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"
          />
        </svg>
      </div>
      <% if (statistics && statistics.salesChange > 0) { %>
      <div class="flex items-center space-x-1 text-xs sm:text-sm">
        <svg
          class="w-3 h-3 sm:w-4 sm:h-4 <%= statistics.salesDirection === 'down' ? 'rotate-180' : '' %>"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z"
            clip-rule="evenodd"
          />
        </svg>
        <span class="font-medium"><%= statistics.salesChange %>%</span>
      </div>
      <% } %>
    </div>
    <h3 class="text-xs sm:text-sm font-medium opacity-90 mb-1">
      Sales This Month
    </h3>
    <p class="text-2xl sm:text-3xl font-bold mb-1">
      ‚Çπ<%= statistics ? statistics.thisMonthSales : '0.00' %>
    </p>
    <p class="text-xs opacity-75">Since previous month</p>
  </div>
</div>

<!-- Dynamic Content Area -->
<div
  id="dynamic-content"
  class="bg-white rounded-xl sm:rounded-2xl shadow-lg p-4 sm:p-6"
>
  <div class="flex items-center justify-between mb-4 sm:mb-6">
    <h3 class="text-lg sm:text-xl font-bold text-gray-800" id="content-title">
      Dashboard Overview
    </h3>
  </div>
  <div id="content-body">
    <!-- Default dashboard content -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 sm:gap-6">
      <!-- Today Orders -->
      <div class="bg-gray-50 rounded-xl p-4 sm:p-6">
        <div class="flex items-center justify-between mb-4 sm:mb-6">
          <h3 class="text-lg sm:text-xl font-bold text-gray-800">
            Today Orders
          </h3>
          <span
            class="px-2 sm:px-3 py-1 bg-gray-100 text-gray-600 rounded-lg text-xs sm:text-sm font-medium"
            ><%= statistics ? statistics.todayOrdersCount : 0 %> orders</span
          >
        </div>

        <% if (statistics && statistics.todayOrdersCount > 0) { %>
        <div class="space-y-3 max-h-96 overflow-y-auto">
          <% todayOrders.slice(0, 10).forEach(function(order) { %>
          <div
            class="flex items-center justify-between p-3 bg-white rounded-lg border border-gray-200 hover:shadow-md transition"
          >
            <div>
              <p class="text-sm font-medium text-gray-900">
                Order #<%= order.orderNumber ||
                order._id.toString().slice(-6).toUpperCase() %>
              </p>
              <p class="text-xs text-gray-500">
                <%= new Date(order.createdAt).toLocaleTimeString('en-US', {
                hour: '2-digit', minute: '2-digit', hour12: true }) %>
              </p>
            </div>
            <div class="text-right">
              <span class="text-sm font-bold text-gray-900"
                >‚Çπ<%= order.totalAmount.toFixed(2) %></span
              >
              <% if (order.paymentMethod) { %>
              <p class="text-xs text-gray-500 capitalize">
                <%= order.paymentMethod %>
              </p>
              <% } %>
            </div>
          </div>
          <% }); %>
        </div>
        <% } else { %>
        <div class="flex flex-col items-center justify-center py-8 sm:py-12">
          <div
            class="w-16 h-16 sm:w-20 sm:h-20 bg-gray-100 rounded-full flex items-center justify-center mb-3 sm:mb-4"
          >
            <svg
              class="w-8 h-8 sm:w-10 sm:h-10 text-gray-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 6v6m0 0v6m0-6h6m-6 0H6"
              />
            </svg>
          </div>
          <h4
            class="text-base sm:text-lg font-semibold text-gray-700 mb-2 text-center"
          >
            Waiting for the today's first order üèÜ
          </h4>
          <p class="text-gray-500 text-xs sm:text-sm text-center px-4">
            Orders will appear here once customers place them
          </p>
        </div>
        <% } %>
      </div>

      <!-- Payment Method -->
      <div class="bg-gray-50 rounded-xl p-4 sm:p-6">
        <h3 class="text-lg sm:text-xl font-bold text-gray-800 mb-4 sm:mb-6">
          Payment Method (Today)
        </h3>
        <div class="space-y-3 sm:space-y-4">
          <div
            class="flex items-center justify-between p-3 sm:p-4 bg-gradient-to-r from-green-50 to-green-100 rounded-lg sm:rounded-xl"
          >
            <div class="flex items-center space-x-2 sm:space-x-3">
              <div
                class="w-8 h-8 sm:w-10 sm:h-10 bg-green-500 rounded-lg flex items-center justify-center flex-shrink-0"
              >
                <svg
                  class="w-4 h-4 sm:w-6 sm:h-6 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"
                  />
                </svg>
              </div>
              <span class="font-semibold text-gray-700 text-sm sm:text-base"
                >Cash</span
              >
            </div>
            <span class="text-xl sm:text-2xl font-bold text-green-600">
              ‚Çπ<%= statistics && statistics.paymentMethods ?
              statistics.paymentMethods.cash.toFixed(2) : '0.00' %>
            </span>
          </div>

          <div
            class="flex items-center justify-between p-3 sm:p-4 bg-gradient-to-r from-blue-50 to-blue-100 rounded-lg sm:rounded-xl"
          >
            <div class="flex items-center space-x-2 sm:space-x-3">
              <div
                class="w-8 h-8 sm:w-10 sm:h-10 bg-blue-500 rounded-lg flex items-center justify-center flex-shrink-0"
              >
                <svg
                  class="w-4 h-4 sm:w-6 sm:h-6 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"
                  />
                </svg>
              </div>
              <span class="font-semibold text-gray-700 text-sm sm:text-base"
                >Card</span
              >
            </div>
            <span class="text-xl sm:text-2xl font-bold text-blue-600">
              ‚Çπ<%= statistics && statistics.paymentMethods ?
              statistics.paymentMethods.card.toFixed(2) : '0.00' %>
            </span>
          </div>

          <div
            class="flex items-center justify-between p-3 sm:p-4 bg-gradient-to-r from-purple-50 to-purple-100 rounded-lg sm:rounded-xl"
          >
            <div class="flex items-center space-x-2 sm:space-x-3">
              <div
                class="w-8 h-8 sm:w-10 sm:h-10 bg-purple-500 rounded-lg flex items-center justify-center flex-shrink-0"
              >
                <svg
                  class="w-4 h-4 sm:w-6 sm:h-6 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
                  />
                </svg>
              </div>
              <span class="font-semibold text-gray-700 text-sm sm:text-base"
                >UPI/Digital</span
              >
            </div>
            <span class="text-xl sm:text-2xl font-bold text-purple-600">
              ‚Çπ<%= statistics && statistics.paymentMethods ?
              statistics.paymentMethods.upi.toFixed(2) : '0.00' %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Date/Time Display (Mobile) -->
<div class="mt-6 sm:mt-8 text-center">
  <p id="mobile-datetime" class="text-xs sm:text-sm text-gray-500">
    <%= statistics ? statistics.currentDate : new Date().toLocaleString('en-US',
    { weekday: 'long', day: 'numeric', month: 'short', hour: '2-digit', minute:
    '2-digit', hour12: true }) %>
  </p>
  <p class="text-xs text-gray-400 mt-1">Dashboard Statistics</p>
</div>
