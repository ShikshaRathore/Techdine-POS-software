<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Executive Form</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      @keyframes slideUp {
        from {
          transform: translateY(20px);
          opacity: 0;
        }
        to {
          transform: translateY(0);
          opacity: 1;
        }
      }

      .animate-slide-up {
        animation: slideUp 0.4s ease-out;
      }

      .custom-scrollbar::-webkit-scrollbar {
        width: 8px;
      }

      .custom-scrollbar::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
      }

      .custom-scrollbar::-webkit-scrollbar-thumb {
        background: #cbd5e1;
        border-radius: 10px;
      }

      .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background: #94a3b8;
      }
    </style>
  </head>
  <body class="bg-gradient-to-br from-gray-50 to-gray-100">
    <!-- Modal Overlay -->
    <div
      id="modalOverlay"
      class="hidden fixed inset-0 bg-gradient-to-br from-gray-900/70 to-slate-900/70 backdrop-blur-sm z-40 transition-all duration-500"
    ></div>

    <!-- Modal -->
    <div
      id="modal"
      class="hidden fixed inset-0 z-50 flex items-center justify-center p-4"
    >
      <div
        class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-hidden transform transition-all duration-500 scale-95 opacity-0 animate-slide-up"
        id="modalContent"
      >
        <!-- Modal Header with gradient -->
        <div
          class="relative bg-gradient-to-r from-orange-500 to-orange-600 p-6"
        >
          <div class="flex items-center justify-between">
            <div>
              <h1 class="text-2xl font-bold text-white mb-1">Add Executive</h1>
              <p class="text-orange-100 text-sm">
                Fill in the details to add a new delivery executive
              </p>
            </div>
            <button
              onclick="closeModal()"
              class="text-white/90 hover:text-white hover:bg-white/20 rounded-full p-2 transition-all duration-200 hover:rotate-90 transform"
              title="Close"
            >
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2.5"
                  d="M6 18L18 6M6 6l12 12"
                ></path>
              </svg>
            </button>
          </div>
        </div>

        <!-- Form Content -->
        <div
          class="p-8 custom-scrollbar overflow-y-auto"
          style="max-height: calc(90vh - 200px)"
        >
          <form
            action="/deliveryExecutive/add/<%= branchId %>"
            method="POST"
            id="executiveForm"
            class="space-y-6"
          >
            <!-- Member Name Field -->
            <div class="group">
              <label
                for="memberName"
                class="block text-sm font-semibold text-gray-700 mb-2"
              >
                Member Name <span class="text-red-500">*</span>
              </label>
              <div class="relative">
                <input
                  name="name"
                  type="text"
                  id="memberName"
                  required
                  class="w-full px-4 py-3.5 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-orange-500/20 focus:border-orange-500 outline-none transition-all duration-200 hover:border-gray-300"
                  placeholder="Enter executive name"
                />
                <div
                  class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none opacity-0 group-focus-within:opacity-100 transition-opacity"
                >
                  <svg
                    class="w-5 h-5 text-orange-500"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                    ></path>
                  </svg>
                </div>
              </div>
            </div>

            <!-- Phone Field -->
            <div class="group">
              <label
                for="phone"
                class="block text-sm font-semibold text-gray-700 mb-2"
              >
                Phone <span class="text-red-500">*</span>
              </label>
              <div class="relative">
                <input
                  name="phone"
                  type="tel"
                  id="phone"
                  required
                  pattern="[0-9]{10}"
                  class="w-full px-4 py-3.5 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-orange-500/20 focus:border-orange-500 outline-none transition-all duration-200 hover:border-gray-300"
                  placeholder="Enter 10-digit phone number"
                />
                <div
                  class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none opacity-0 group-focus-within:opacity-100 transition-opacity"
                >
                  <svg
                    class="w-5 h-5 text-orange-500"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                </div>
              </div>
            </div>

            <!-- Status Field - FIXED VALUES -->
            <div class="group">
              <label
                for="status"
                class="block text-sm font-semibold text-gray-700 mb-2"
              >
                Status <span class="text-red-500">*</span>
              </label>
              <div class="relative">
                <select
                  name="status"
                  id="status"
                  required
                  class="w-full px-4 py-3.5 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-orange-500/20 focus:border-orange-500 outline-none transition-all duration-200 appearance-none bg-white cursor-pointer hover:border-gray-300"
                  style="
                    background-image: url('data:image/svg+xml;charset=UTF-8,%3csvg xmlns=%27http://www.w3.org/2000/svg%27 viewBox=%270 0 24 24%27 fill=%27none%27 stroke=%27%23ea580c%27 stroke-width=%272%27 stroke-linecap=%27round%27 stroke-linejoin=%27round%27%3e%3cpolyline points=%276 9 12 15 18 9%27%3e%3c/polyline%3e%3c/svg%3e');
                    background-repeat: no-repeat;
                    background-position: right 1rem center;
                    background-size: 1.5em 1.5em;
                  "
                >
                  <option value="active">Active</option>
                  <option value="inactive">Inactive</option>
                  <option value="blocked">Blocked</option>
                </select>
              </div>
            </div>
          </form>
        </div>

        <!-- Footer with gradient border -->
        <div
          class="border-t-2 border-gray-100 bg-gradient-to-r from-gray-50 to-gray-100/50 px-8 py-5"
        >
          <div class="flex gap-3 justify-end">
            <button
              type="button"
              onclick="closeModal()"
              class="px-6 py-3 bg-white hover:bg-gray-50 text-gray-700 font-semibold rounded-xl border-2 border-gray-200 transition-all duration-200 ease-in-out hover:border-gray-300 hover:shadow-md transform hover:scale-[1.02]"
            >
              Cancel
            </button>
            <button
              type="button"
              onclick="submitForm()"
              class="px-8 py-3 bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white font-semibold rounded-xl transition-all duration-200 ease-in-out shadow-lg shadow-orange-500/30 hover:shadow-xl hover:shadow-orange-500/40 transform hover:scale-[1.02]"
            >
              <span class="flex items-center gap-2">
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"
                  ></path>
                </svg>
                Save Executive
              </span>
            </button>
          </div>
        </div>
      </div>
    </div>

    <script>
      function openModal() {
        const modal = document.getElementById("modal");
        const overlay = document.getElementById("modalOverlay");
        const content = document.getElementById("modalContent");

        modal.classList.remove("hidden");
        overlay.classList.remove("hidden");
        document.body.style.overflow = "hidden";

        setTimeout(() => {
          overlay.classList.remove("opacity-0");
          overlay.classList.add("opacity-100");
          content.classList.remove("scale-95", "opacity-0");
          content.classList.add("scale-100", "opacity-100");
        }, 10);
      }

      function closeModal() {
        window.history.back();
      }

      // FIXED: Actually submit the form
      function submitForm() {
        const form = document.getElementById("executiveForm");
        if (form.checkValidity()) {
          form.submit();
        } else {
          form.reportValidity();
        }
      }

      // Close modal when clicking outside
      document
        .getElementById("modalOverlay")
        .addEventListener("click", closeModal);

      // Close modal with Escape key
      document.addEventListener("keydown", function (event) {
        if (event.key === "Escape") {
          closeModal();
        }
      });

      // Auto-open modal when page loads
      window.addEventListener("DOMContentLoaded", function () {
        openModal();
      });
    </script>
  </body>
</html>
