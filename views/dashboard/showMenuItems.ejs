<!-- Menu Items Dashboard - EJS Template -->
<!-- views/menu-items.ejs or views/partials/menu-items.ejs -->

<div class="min-h-screen p-6">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Menu Items</h1>
    </div>

    <!-- Search Bar and Actions -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mb-6">
      <div class="flex flex-col md:flex-row gap-4 items-center justify-between">
        <div class="flex-1 w-full md:max-w-md">
          <input
            type="text"
            id="searchInput"
            placeholder="Search your menu item here"
            class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent transition"
          />
        </div>
        <div class="flex gap-3">
          <button
            id="showFiltersBtn"
            class="px-4 py-2.5 border border-gray-300 rounded-lg hover:bg-gray-50 transition flex items-center gap-2 text-gray-700 font-medium"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"
              />
            </svg>
            Show Filters
          </button>
          <form action="/addMenuItem/<%= branchId %>" method="GET">
            <button
              type="submit"
              class="px-6 py-2.5 bg-orange-500 hover:bg-orange-600 text-white rounded-lg transition font-medium"
            >
              Add Menu Item
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Filters Section -->
    <div
      id="filtersSection"
      class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mb-6 hidden"
    >
      <div class="flex flex-wrap gap-4 items-center">
        <!-- Filter by Category -->
        <div class="relative">
          <button
            id="categoryFilterBtn"
            class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition flex items-center gap-2 text-gray-700 font-medium"
          >
            Filter by Category
            <span id="categoryBadge" class="badge bg-red-500 text-white hidden"
              >0</span
            >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"
              />
            </svg>
          </button>

          <div
            id="categoryDropdown"
            class="absolute top-full left-0 mt-2 w-64 bg-white rounded-lg border border-gray-200 filter-dropdown z-10 hidden max-h-96 overflow-y-auto"
          >
            <div class="p-2">
              <% if (categories && categories.length > 0) { %> <%
              categories.forEach(category => { %>
              <label
                class="flex items-center p-2 hover:bg-gray-50 rounded cursor-pointer"
              >
                <input
                  type="checkbox"
                  value="<%= category.name %>"
                  class="category-checkbox w-4 h-4 text-orange-500 border-gray-300 rounded focus:ring-orange-500"
                />
                <span class="ml-2 text-sm text-gray-700"
                  ><%= category.name %></span
                >
              </label>
              <% }) %> <% } else { %>
              <p class="text-gray-500 text-sm text-center py-2">
                No categories available
              </p>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Filter by Type -->
        <div class="relative">
          <button
            id="typeFilterBtn"
            class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition flex items-center gap-2 text-gray-700 font-medium"
          >
            Filter by Type
            <span id="typeBadge" class="badge bg-red-500 text-white hidden"
              >0</span
            >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"
              />
            </svg>
          </button>
          <div
            id="typeDropdown"
            class="absolute top-full left-0 mt-2 w-48 bg-white rounded-lg border border-gray-200 filter-dropdown z-10 hidden"
          >
            <div class="p-2">
              <label
                class="flex items-center p-2 hover:bg-gray-50 rounded cursor-pointer"
              >
                <input
                  type="checkbox"
                  value="Veg"
                  class="type-checkbox w-4 h-4 text-orange-500 border-gray-300 rounded focus:ring-orange-500"
                />
                <span
                  class="w-3 h-3 rounded-full bg-green-500 ml-2 mr-2"
                ></span>
                <span class="text-sm text-gray-700">Veg</span>
              </label>
              <label
                class="flex items-center p-2 hover:bg-gray-50 rounded cursor-pointer"
              >
                <input
                  type="checkbox"
                  value="Non Veg"
                  class="type-checkbox w-4 h-4 text-orange-500 border-gray-300 rounded focus:ring-orange-500"
                />
                <span class="w-3 h-3 rounded-full bg-red-500 ml-2 mr-2"></span>
                <span class="text-sm text-gray-700">Non Veg</span>
              </label>
              <label
                class="flex items-center p-2 hover:bg-gray-50 rounded cursor-pointer"
              >
                <input
                  type="checkbox"
                  value="Egg"
                  class="type-checkbox w-4 h-4 text-orange-500 border-gray-300 rounded focus:ring-orange-500"
                />
                <span
                  class="w-3 h-3 rounded-full bg-yellow-500 ml-2 mr-2"
                ></span>
                <span class="text-sm text-gray-700">Egg</span>
              </label>
            </div>
          </div>
        </div>

        <!-- Clear Filters -->
        <button
          id="clearFiltersBtn"
          class="px-4 py-2 border border-red-300 text-red-600 rounded-lg hover:bg-red-50 transition flex items-center gap-2 font-medium"
        >
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"
            />
          </svg>
          Clear Filters
        </button>

        <!-- Hide Filters -->
        <button
          id="hideFiltersBtn"
          class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition text-gray-700 font-medium"
        >
          Hide Filters
        </button>
      </div>
    </div>

    <!-- Menu Items Table -->
    <div
      class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden"
    >
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th
                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
              >
                Item Name
              </th>
              <th
                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
              >
                Price
              </th>
              <th
                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
              >
                Item Category
              </th>
              <th
                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
              >
                Menu Name
              </th>
              <th
                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
              >
                Action
              </th>
            </tr>
          </thead>
          <tbody id="menuItemsTable" class="bg-white divide-y divide-gray-200">
            <% if (menuItems && menuItems.length > 0) { %> <%
            menuItems.forEach(item => { %>
            <tr
              class="hover:bg-gray-50 transition menu-item-row"
              data-name="<%= item.itemName.toLowerCase() %>"
              data-description="<%= item.description ? item.description.toLowerCase() : '' %>"
              data-category="<%= item.category?.name || 'No Category' %>"
              data-type="<%= item.type %>"
            >
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div
                    class="flex-shrink-0 h-12 w-12 bg-gray-100 rounded-lg flex items-center justify-center overflow-hidden"
                  >
                    <% if (item.menuItemImage.url) { %>
                    <img
                      src="<%= item.menuItemImage.url %>"
                      class="h-full w-full object-cover"
                    />
                    <% } else { %>
                    <svg
                      class="w-6 h-6 text-gray-400"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                      />
                    </svg>
                    <% } %>
                  </div>
                  <div class="ml-4">
                    <div class="flex items-center gap-2">
                      <span
                        class="w-3 h-3 rounded-full <%= item.type === 'Veg' ? 'bg-green-500' : item.type === 'Non Veg' ? 'bg-red-500' : 'bg-yellow-500' %>"
                      ></span>
                      <div class="text-sm font-medium text-gray-900">
                        <%= item.itemName %>
                      </div>
                    </div>
                    <% if (item.description) { %>
                    <div class="text-sm text-gray-500">
                      <%= item.description %>
                    </div>
                    <% } %>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-semibold text-gray-900">
                  â‚¹<%= item.price %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">
                  <%= item.category.name %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">
                  <%= item.menu && item.menu.menuName ? item.menu.menuName :
                  'N/A' %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <div class="flex gap-2">
                  <a
                    href="/dashboard/menu-items/edit/<%= item._id %>"
                    class="px-3 py-1.5 border border-gray-300 rounded-lg hover:bg-gray-50 transition flex items-center gap-1 text-gray-700"
                  >
                    <svg
                      class="w-4 h-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                      />
                    </svg>
                    Update
                  </a>
                  <form
                    action="/dashboard/menu-items/delete/<%= item._id %>"
                    method="GET"
                    class="inline"
                  >
                    <button
                      type="submit"
                      class="px-3 py-1.5 border border-red-300 text-red-600 rounded-lg hover:bg-red-50 transition flex items-center gap-1"
                    >
                      <svg
                        class="w-4 h-4"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                        />
                      </svg>
                      Delete
                    </button>
                  </form>
                </div>
              </td>
            </tr>
            <% }); %> <% } %>
          </tbody>
        </table>
      </div>

      <!-- No Results Message -->
      <div
        id="noResults"
        class="p-8 text-center <%= menuItems && menuItems.length > 0 ? 'hidden' : '' %>"
      >
        <svg
          class="w-16 h-16 mx-auto text-gray-300 mb-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          />
        </svg>
        <p class="text-gray-500 text-lg">No menu items found</p>
        <p class="text-gray-400 text-sm mt-2">
          Add your first menu item to get started
        </p>
      </div>
    </div>
  </div>
</div>

<style>
  .filter-dropdown {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }
  .badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 1.25rem;
    height: 1.25rem;
    padding: 0 0.375rem;
    font-size: 0.75rem;
    font-weight: 600;
    line-height: 1;
    border-radius: 9999px;
  }
</style>
<script src="/js/pages/showMenuItems.js"></script>
