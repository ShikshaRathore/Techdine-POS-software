<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Item Categories</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50 min-h-screen">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 py-4 sm:py-6">
      <!-- Header -->
      <h1 class="text-xl sm:text-2xl font-bold text-gray-900 mb-4 sm:mb-6">
        Item Categories
      </h1>

      <!-- Search and Add Button Row -->
      <div class="flex flex-col sm:flex-row gap-3 mb-4 sm:mb-5">
        <div class="flex-1">
          <input
            type="text"
            id="searchInput"
            placeholder="Search your item category here"
            class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent"
          />
        </div>
        <form action="/addItemCategory/<%= branchId %>" method="GET">
          <button
            type="submit"
            class="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 text-sm rounded-lg font-medium whitespace-nowrap transition-colors"
          >
            Add Item Category
          </button>
        </form>
      </div>

      <!-- Table Container -->
      <div
        class="bg-white rounded-lg shadow-sm overflow-hidden border border-gray-200"
      >
        <!-- Table Header -->
        <div
          class="hidden sm:grid grid-cols-12 gap-3 px-4 py-3 bg-gray-50 border-b border-gray-200"
        >
          <div class="col-span-5">
            <h3
              class="text-xs font-semibold text-gray-500 uppercase tracking-wider"
            >
              Item Category
            </h3>
          </div>
          <div class="col-span-4">
            <h3
              class="text-xs font-semibold text-gray-500 uppercase tracking-wider"
            >
              Menu Items
            </h3>
          </div>
          <div class="col-span-3 text-right">
            <h3
              class="text-xs font-semibold text-gray-500 uppercase tracking-wider"
            >
              Action
            </h3>
          </div>
        </div>

        <!-- Table Rows Container -->
        <div id="categoryList">
          <% if (categoryStats && categoryStats.length > 0) { %> <%
          categoryStats.forEach(stat => { %>
          <div
            class="category-row border-b border-gray-200 last:border-b-0 hover:bg-gray-50 transition-colors"
            data-category="<%= stat._id.toLowerCase() %>"
          >
            <div
              class="grid grid-cols-1 sm:grid-cols-12 gap-2 sm:gap-3 px-4 py-3 sm:py-4"
            >
              <div
                class="sm:col-span-5 flex items-center justify-between sm:justify-start"
              >
                <span class="text-sm font-medium text-gray-900">
                  <%= stat._id %>
                </span>
                <span class="sm:hidden text-xs text-gray-500">
                  <%= stat.totalItems %> Item(s)
                </span>
              </div>

              <div class="hidden sm:flex sm:col-span-4 items-center">
                <span class="text-sm text-gray-600">
                  <%= stat.totalItems %> Item(s)
                </span>
              </div>

              <div class="sm:col-span-3 flex items-center justify-end gap-2">
                <a
                  href="/dashboard/categories/edit/<%= stat.categoryId %>"
                  class="flex items-center px-3 py-1.5 text-xs border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition-colors"
                >
                  <svg
                    class="w-3.5 h-3.5 mr-1.5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                    ></path>
                  </svg>
                  Update
                </a>
                <form
                  action="/dashboard/categories/delete/<%= stat.categoryId %>"
                  method="GET"
                  class="inline"
                >
                  <button
                    type="submit"
                    onclick="return confirm('Are you sure you want to delete this category?')"
                    class="p-1.5 border border-red-300 rounded-md text-red-600 hover:bg-red-50 transition-colors"
                  >
                    <svg
                      class="w-4 h-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                      ></path>
                    </svg>
                  </button>
                </form>
              </div>
            </div>
          </div>
          <% }) %> <% } else { %>
          <div class="px-4 py-8 text-center text-gray-500 text-sm">
            No categories found.
          </div>
          <% } %>
        </div>

        <!-- No Results Message -->
        <div
          id="noResults"
          class="hidden px-4 py-8 text-center text-gray-500 text-sm"
        >
          No categories found matching your search.
        </div>
      </div>
    </div>

    <script>
      const searchInput = document.getElementById("searchInput");
      const categoryRows = document.querySelectorAll(".category-row");
      const noResults = document.getElementById("noResults");
      const categoryList = document.getElementById("categoryList");

      if (searchInput && noResults) {
        searchInput.addEventListener("input", function (e) {
          const searchTerm = e.target.value.toLowerCase().trim();
          let visibleCount = 0;

          categoryRows.forEach((row) => {
            const categoryName = row.getAttribute("data-category");
            if (categoryName.includes(searchTerm)) {
              row.style.display = "";
              visibleCount++;
            } else {
              row.style.display = "none";
            }
          });

          if (visibleCount === 0 && categoryRows.length > 0) {
            categoryList.style.display = "none";
            noResults.classList.remove("hidden");
          } else {
            categoryList.style.display = "block";
            noResults.classList.add("hidden");
          }
        });
      }
    </script>
  </body>
</html>
