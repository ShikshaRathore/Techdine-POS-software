<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }

    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      transform: translateY(20px);
      opacity: 0;
    }

    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .popup-overlay {
    animation: fadeIn 0.3s ease-out;
  }

  .popup-content {
    animation: slideUp 0.4s ease-out;
  }

  .hide-scrollbar::-webkit-scrollbar {
    display: none;
  }

  .hide-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>

<div class="bg-white rounded-2xl shadow-2xl w-full max-w-2xl max-h-[90vh] flex flex-col popup-content">

  <!-- Header -->
  <div class="p-6 border-b border-gray-200">
    <h2 class="text-2xl font-bold text-gray-900 mb-2">Select Your Table</h2>
    <p class="text-gray-600">Choose a table to start ordering</p>
  </div>

  <!-- Search and Filter -->
  <div class="p-4 border-b border-gray-200 space-y-3">
    <!-- Search Bar -->
    <div class="relative">
      <svg class="w-5 h-5 text-gray-400 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none"
        stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
      <input type="text" id="tableSearchInput" placeholder="Search table code..."
        class="w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500 transition-all" />
    </div>

    <!-- Area Filters -->
    <div id="areaFilters" class="flex gap-2 overflow-x-auto pb-2 hide-scrollbar">
      <button onclick="filterByArea('all')" data-area="all"
        class="area-filter-btn px-4 py-2 rounded-lg font-medium whitespace-nowrap transition-colors bg-orange-500 text-white">
        All Areas
      </button>
    </div>
  </div>

  <!-- Tables List -->
  <div class="flex-1 overflow-y-auto p-4">
    <div id="tablesContainer" class="grid grid-cols-1 sm:grid-cols-2 gap-3">
      <!-- Loading State -->
      <div class="col-span-full flex flex-col items-center justify-center py-12">
        <div class="w-12 h-12 border-4 border-orange-500 border-t-transparent rounded-full animate-spin">
        </div>
        <p class="mt-4 text-gray-600">Loading tables...</p>
      </div>
    </div>
  </div>

  <!-- Footer Info -->
  <div class="p-4 border-t border-gray-200 bg-gray-50">
    <div class="flex items-center gap-4 text-sm flex-wrap">
      <div class="flex items-center gap-2">
        <div class="w-3 h-3 bg-green-500 rounded-full"></div>
        <span class="text-gray-700">Available</span>
      </div>
      <div class="flex items-center gap-2">
        <div class="w-3 h-3 bg-red-500 rounded-full"></div>
        <span class="text-gray-700">Occupied</span>
      </div>
      <div class="flex items-center gap-2">
        <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
        <span class="text-gray-700">Reserved</span>
      </div>
    </div>
  </div>

</div>

<script>
  // ==================== CONFIGURATION ====================
  const API_BASE_URL = ''; // Leave empty for relative URLs, or set to your API base URL

  // ==================== STATE ====================
  let allTables = [];
  let selectedArea = 'all';

  // ==================== UTILITY FUNCTIONS ====================

  // Extract branch ID from URL
  function getBranchIdFromURL() {
    const pathParts = window.location.pathname.split('/');
    const restaurantIndex = pathParts.indexOf('restaurant');
    if (restaurantIndex !== -1 && pathParts[restaurantIndex + 1]) {
      return pathParts[restaurantIndex + 1];
    }
    return null;
  }

  // Check if table info exists in URL
  function hasTableInURL() {
    const urlParams = new URLSearchParams(window.location.search);
    return urlParams.has('table') || urlParams.has('tableCode');
  }

  // Get status badge classes
  function getStatusBadgeClass(status) {
    switch (status) {
      case 'Available':
        return 'bg-green-100 text-green-700';
      case 'Occupied':
        return 'bg-red-100 text-red-700';
      case 'Reserved':
        return 'bg-yellow-100 text-yellow-700';
      default:
        return 'bg-gray-100 text-gray-700';
    }
  }

  // ==================== API FUNCTIONS ====================

  // Fetch tables from API
  async function fetchTables() {
    const branchId = getBranchIdFromURL();

    if (!branchId) {
      showError('Branch information not found. Please try again.');
      return;
    }

    try {
      const response = await fetch(`${API_BASE_URL}/restaurant/${branchId}/tables`);
      const data = await response.json();

      if (data.success) {
        allTables = data.tables || [];
        setupAreaFilters();
        displayTables();
      } else {
        showError(data.message || 'Failed to load tables');
      }
    } catch (error) {
      console.error('Error fetching tables:', error);
      showError('Failed to load tables. Please check your connection and try again.');
    }
  }

  // ==================== UI FUNCTIONS ====================

  // Setup area filter buttons
  function setupAreaFilters() {
    const areas = [...new Set(allTables.map(t => t.area?.name).filter(Boolean))];
    const container = document.getElementById('areaFilters');

    if (areas.length === 0) return;

    // Add area filter buttons
    const areaButtons = areas.map(area => `
        <button 
          onclick="filterByArea('${area}')" 
          data-area="${area}"
          class="area-filter-btn px-4 py-2 rounded-lg font-medium whitespace-nowrap transition-colors bg-gray-100 text-gray-700 hover:bg-gray-200"
        >
          ${area}
        </button>
      `).join('');

    // Keep "All Areas" button and add new ones
    container.innerHTML = `
        <button 
          onclick="filterByArea('all')" 
          data-area="all"
          class="area-filter-btn px-4 py-2 rounded-lg font-medium whitespace-nowrap transition-colors bg-orange-500 text-white"
        >
          All Areas
        </button>
        ${areaButtons}
      `;
  }

  // Filter tables by area
  function filterByArea(area) {
    selectedArea = area;

    // Update button styles
    document.querySelectorAll('.area-filter-btn').forEach(btn => {
      if (btn.dataset.area === area) {
        btn.className = 'area-filter-btn px-4 py-2 rounded-lg font-medium whitespace-nowrap transition-colors bg-orange-500 text-white';
      } else {
        btn.className = 'area-filter-btn px-4 py-2 rounded-lg font-medium whitespace-nowrap transition-colors bg-gray-100 text-gray-700 hover:bg-gray-200';
      }
    });

    displayTables();
  }

  // Display tables in grid
  function displayTables() {
    const container = document.getElementById('tablesContainer');
    const searchQuery = document.getElementById('tableSearchInput').value.toLowerCase();

    // Filter tables
    let filtered = allTables;

    // Filter by area
    if (selectedArea !== 'all') {
      filtered = filtered.filter(t => t.area?.name === selectedArea);
    }

    // Filter by search query
    if (searchQuery) {
      filtered = filtered.filter(t =>
        t.tableCode.toLowerCase().includes(searchQuery)
      );
    }

    // Show empty state if no tables
    if (filtered.length === 0) {
      container.innerHTML = `
          <div class="col-span-full flex flex-col items-center justify-center py-12">
            <svg class="w-16 h-16 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <p class="text-gray-600 text-center">No tables found</p>
            ${searchQuery ? `
              <button 
                onclick="document.getElementById('tableSearchInput').value = ''; displayTables();" 
                class="mt-2 text-orange-500 hover:text-orange-600 font-medium"
              >
                Clear search
              </button>
            ` : ''}
          </div>
        `;
      return;
    }

    // Render table cards
    container.innerHTML = filtered.map(table => {
      const isAvailable = table.availabilityStatus === 'Available' && table.status === 'Active';
      const statusBadgeClass = getStatusBadgeClass(table.availabilityStatus);

      return `
          <button
            onclick="selectTable('${table._id}', '${table.tableCode}')"
            ${!isAvailable ? 'disabled' : ''}
            class="p-4 rounded-xl border-2 text-left transition-all ${isAvailable
          ? 'border-gray-200 hover:border-orange-500 hover:shadow-md cursor-pointer active:scale-95'
          : 'border-gray-200 bg-gray-50 opacity-60 cursor-not-allowed'
        }"
          >
            <!-- Table Header -->
            <div class="flex items-start justify-between mb-3">
              <div class="flex-1">
                <h3 class="font-bold text-lg text-gray-900">${table.tableCode}</h3>
                ${table.area?.name ? `
                  <p class="text-sm text-gray-600 flex items-center gap-1 mt-1">
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                    ${table.area.name}
                  </p>
                ` : ''}
              </div>
              <div class="px-2.5 py-1 rounded-full text-xs font-semibold ${statusBadgeClass}">
                ${table.availabilityStatus}
              </div>
            </div>

            <!-- Table Footer -->
            <div class="flex items-center gap-4 text-sm text-gray-600">
              <div class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                </svg>
                <span>${table.seatingCapacity} seats</span>
              </div>
              ${isAvailable ? `
                <div class="flex items-center gap-1 text-orange-500 font-medium">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <span>Select</span>
                </div>
              ` : ''}
            </div>
          </button>
        `;
    }).join('');
  }

  // Show error state
  function showError(message) {
    const container = document.getElementById('tablesContainer');
    container.innerHTML = `
        <div class="col-span-full flex flex-col items-center justify-center py-12">
          <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </div>
          <p class="text-red-600 font-medium text-center px-4">${message}</p>
          <button 
            onclick="fetchTables()" 
            class="mt-4 px-6 py-2 bg-orange-500 text-white rounded-lg hover:bg-orange-600 transition-colors font-medium"
          >
            Try Again
          </button>
        </div>
      `;
  }

  // Handle table selection
  function selectTable(tableId, tableCode) {
    const branchId = getBranchIdFromURL();
    if (!branchId) {
      showError('Branch information not found. Please try again.');
      return;
    }

    // Construct the new URL with table parameters
    const baseURL = window.location.origin + window.location.pathname;
    const newURL = `${baseURL}?table=${tableId}&tableCode=${tableCode}`;

    console.log('Redirecting to:', newURL);

    // Redirect to the new URL
    window.location.href = newURL;
  }

  // ==================== EVENT LISTENERS ====================

  // Search functionality
  document.getElementById('tableSearchInput').addEventListener('input', () => {
    displayTables();
  });

  // Close popup on outside click
  document.getElementById('tableSelectionPopup').addEventListener('click', (e) => {
    if (e.target.id === 'tableSelectionPopup') {
      // Optional: Allow closing by clicking outside
      // Uncomment the next line to enable this feature
      // window.location.href = '/'; // or go back
    }
  });

  // ==================== INITIALIZATION ====================

  // ==================== INITIALIZATION ====================

  // Initialize on page load
  window.addEventListener('DOMContentLoaded', function () {
    // Don't automatically load tables or show popup
    // Tables will be loaded when user clicks "Call Waiter" button
    console.log('Table selection popup ready - waiting for user action');
  });
</script>