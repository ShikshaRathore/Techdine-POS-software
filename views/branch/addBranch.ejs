<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= appName %> - Add Branch
  </title>

  <script src="https://cdn.tailwindcss.com"></script>

  <style>
    :root {
      --theme-color: <%=themeColor %>;
      --theme-light: color-mix(in srgb, <%=themeColor %> 80%, white);
      --theme-dark: color-mix(in srgb, <%=themeColor %> 80%, black);
    }

    .theme-text {
      color: var(--theme-color);
    }

    .theme-bg {
      background-color: var(--theme-color);
    }

    .theme-border {
      border-color: var(--theme-color);
    }

    .theme-gradient {
      background-image: linear-gradient(90deg, var(--theme-light), var(--theme-dark));
    }

    .theme-gradient:hover {
      background-image: linear-gradient(90deg, var(--theme-dark), var(--theme-color));
    }

    .theme-focus:focus {
      outline: none;
      box-shadow: 0 0 0 3px var(--theme-light);
    }

    * {
      font-family: "Euclid Circular A", -apple-system, BlinkMacSystemFont,
        "Segoe UI", sans-serif;
    }
  </style>
</head>

<body class="bg-gray-50 min-h-screen">
  <div class="container mx-auto px-4 py-12 lg:py-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center max-w-7xl mx-auto">

      <!-- Left Side -->
      <div class="space-y-8">

        <!-- Branding -->
        <div class="flex items-center space-x-3">
          <div class="w-12 h-12 theme-gradient rounded-lg flex items-center justify-center shadow-lg">
            <span class="text-white font-bold text-2xl">
              <%= appName ? appName.charAt(0).toUpperCase() : 'T' %>
            </span>
          </div>

          <span class="text-3xl font-bold text-gray-900">
            <%= appName %>
          </span>
        </div>

        <!-- Heading -->
        <div>
          <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4 leading-tight">
            Take Control of Your Restaurant
          </h1>
          <p class="text-lg text-gray-600">
            Join thousands of restaurants managing their operations with <%= appName %>.
          </p>
        </div>

        <!-- Features -->
        <div class="space-y-5">

          <% const features=[ "Streamline Order Management" , "Optimize Table Reservations"
            , "Effortless Menu Management" ]; %>

            <% features.forEach(f=> { %>
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                  <svg class="w-6 h-6 theme-text" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-1">
                    <%= f %>
                  </h3>
                  <p class="text-gray-600">Manage this feature easily with <%= appName %>.</p>
                </div>
              </div>
              <% }); %>

        </div>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-6 pt-6">
          <div>
            <p class="text-3xl font-bold theme-text">5000+</p>
            <p class="text-sm text-gray-600 mt-1">Restaurants</p>
          </div>
          <div>
            <p class="text-3xl font-bold theme-text">50K+</p>
            <p class="text-sm text-gray-600 mt-1">Daily Orders</p>
          </div>
          <div>
            <p class="text-3xl font-bold theme-text">98%</p>
            <p class="text-sm text-gray-600 mt-1">Satisfaction</p>
          </div>
        </div>

      </div>

      <!-- Right Side - Form -->
      <div class="w-full">
        <div class="bg-white rounded-2xl shadow-xl p-8 lg:p-10">

          <div class="mb-8">
            <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-3">
              Add Restaurant Branch Details
            </h2>
            <p class="text-gray-600">Fill in the information below</p>
          </div>

          <form action="/add-branch" method="POST" class="space-y-6">

            <!-- Branch Name -->
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">Branch Name</label>
              <input type="text" name="branchName" placeholder="Enter branch name"
                class="w-full px-4 py-3.5 border border-gray-300 rounded-lg theme-focus" required />
            </div>

            <!-- Country -->
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">Country</label>
              <select name="country"
                class="w-full px-4 py-3.5 border border-gray-300 rounded-lg theme-focus bg-white cursor-pointer"
                required>
                <option value="India">India</option>
                <option value="USA">USA</option>
                <option value="UK">UK</option>
                <option value="Canada">Canada</option>
                <option value="Australia">Australia</option>
              </select>
            </div>

            <!-- Address -->
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">Branch Address</label>
              <textarea name="address" rows="4" placeholder="Enter complete branch address"
                class="w-full px-4 py-3.5 border border-gray-300 rounded-lg theme-focus resize-none"
                required></textarea>
            </div>

            <!-- Button -->
            <button type="submit"
              class="w-full theme-gradient text-white font-semibold py-4 rounded-lg shadow-md transition-all duration-200">
              Add Branch
            </button>

            <!-- Footer -->
            <p class="text-center text-sm text-gray-600 pt-4">
              Already have an account?
              <a href="/login" class="theme-text font-semibold hover:opacity-80">Login here</a>
            </p>

          </form>
        </div>

        <div class="mt-6 text-center">
          <p class="text-sm text-gray-500">ðŸ”’ Your data is secure and encrypted</p>
        </div>
      </div>

    </div>
  </div>
</body>

</html>