<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Executive Form</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      @keyframes slideUp {
        from {
          transform: translateY(20px);
          opacity: 0;
        }
        to {
          transform: translateY(0);
          opacity: 1;
        }
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      .animate-slide-up {
        animation: slideUp 0.4s ease-out;
      }

      .animate-fade-in {
        animation: fadeIn 0.3s ease-out;
      }

      .custom-scrollbar::-webkit-scrollbar {
        width: 8px;
      }

      .custom-scrollbar::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
      }

      .custom-scrollbar::-webkit-scrollbar-thumb {
        background: #cbd5e1;
        border-radius: 10px;
      }

      .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background: #94a3b8;
      }

      /* Password toggle icon animation */
      .password-toggle {
        transition: all 0.2s ease;
      }

      .password-toggle:hover {
        transform: scale(1.1);
      }
    </style>
  </head>
  <body class="bg-gradient-to-br from-gray-50 to-gray-100">
    <!-- Modal Overlay -->
    <div
      id="modalOverlay"
      class="hidden fixed inset-0 bg-gradient-to-br from-gray-900/70 to-slate-900/70 backdrop-blur-sm z-40 transition-all duration-500"
    ></div>

    <!-- Modal -->
    <div
      id="modal"
      class="hidden fixed inset-0 z-50 flex items-center justify-center p-4"
    >
      <div
        class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-hidden transform transition-all duration-500 scale-95 opacity-0"
        id="modalContent"
      >
        <!-- Modal Header with gradient -->
        <div class="relative bg-gradient-to-r from-blue-600 to-blue-700 p-6">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <div class="bg-white/20 p-2 rounded-lg backdrop-blur-sm">
                <svg
                  class="w-6 h-6 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                  ></path>
                </svg>
              </div>
              <div>
                <h1 class="text-2xl font-bold text-white mb-1">
                  Edit Executive
                </h1>
                <p class="text-blue-100 text-sm">
                  Update delivery executive details
                </p>
              </div>
            </div>
            <button
              onclick="closeModal()"
              class="text-white/90 hover:text-white hover:bg-white/20 rounded-full p-2 transition-all duration-200 hover:rotate-90 transform"
              title="Close"
            >
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2.5"
                  d="M6 18L18 6M6 6l12 12"
                ></path>
              </svg>
            </button>
          </div>
        </div>

        <!-- Form Content -->
        <div
          class="p-8 custom-scrollbar overflow-y-auto"
          style="max-height: calc(90vh - 200px)"
        >
          <form
            action="/deliveryExecutive/edit/<%= executive._id %>/<%= branchId %>"
            method="POST"
            id="executiveForm"
            class="space-y-6"
          >
            <!-- Executive ID Badge -->
            <div
              class="bg-gradient-to-r from-blue-50 to-indigo-50 border border-blue-200 rounded-xl p-4"
            >
              <div class="flex items-center gap-2 text-sm">
                <svg
                  class="w-5 h-5 text-blue-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2"
                  ></path>
                </svg>
                <span class="font-semibold text-blue-900">Executive ID:</span>
                <span class="text-blue-700 font-mono"
                  ><%= executive._id %></span
                >
              </div>
            </div>

            <!-- Member Name Field -->
            <div class="group">
              <label
                for="memberName"
                class="block text-sm font-semibold text-gray-700 mb-2"
              >
                <span class="flex items-center gap-2">
                  <svg
                    class="w-4 h-4 text-blue-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                    ></path>
                  </svg>
                  Member Name <span class="text-red-500">*</span>
                </span>
              </label>
              <div class="relative">
                <input
                  name="name"
                  type="text"
                  id="memberName"
                  value="<%= executive.name %>"
                  required
                  class="w-full px-4 py-3.5 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-blue-500/20 focus:border-blue-500 outline-none transition-all duration-200 hover:border-gray-300"
                  placeholder="Enter executive name"
                />
              </div>
            </div>

            <!-- Phone Field -->
            <div class="group">
              <label
                for="phone"
                class="block text-sm font-semibold text-gray-700 mb-2"
              >
                <span class="flex items-center gap-2">
                  <svg
                    class="w-4 h-4 text-blue-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                  Phone <span class="text-red-500">*</span>
                </span>
              </label>
              <div class="relative">
                <input
                  name="phone"
                  type="tel"
                  id="phone"
                  value="<%= executive.phone %>"
                  required
                  pattern="[0-9]{10}"
                  class="w-full px-4 py-3.5 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-blue-500/20 focus:border-blue-500 outline-none transition-all duration-200 hover:border-gray-300"
                  placeholder="Enter 10-digit phone number"
                />
              </div>
            </div>

            <!-- Status Field -->
            <div class="group">
              <label
                for="status"
                class="block text-sm font-semibold text-gray-700 mb-2"
              >
                <span class="flex items-center gap-2">
                  <svg
                    class="w-4 h-4 text-blue-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                    ></path>
                  </svg>
                  Status <span class="text-red-500">*</span>
                </span>
              </label>
              <div class="relative">
                <select
                  name="status"
                  id="status"
                  required
                  class="w-full px-4 py-3.5 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-blue-500/20 focus:border-blue-500 outline-none transition-all duration-200 appearance-none bg-white cursor-pointer hover:border-gray-300"
                  style="
                    background-image: url('data:image/svg+xml;charset=UTF-8,%3csvg xmlns=%27http://www.w3.org/2000/svg%27 viewBox=%270 0 24 24%27 fill=%27none%27 stroke=%27%232563eb%27 stroke-width=%272%27 stroke-linecap=%27round%27 stroke-linejoin=%27round%27%3e%3cpolyline points=%276 9 12 15 18 9%27%3e%3c/polyline%3e%3c/svg%3e');
                    background-repeat: no-repeat;
                    background-position: right 1rem center;
                    background-size: 1.5em 1.5em;
                  "
                >
                  <option value="active" <%= executive.status === 'active' ?
                  'selected' : '' %>> Active <option value="inactive" <%=
                  executive.status === 'inactive' ? 'selected' : '' %>> Inactive
                  <option value="blocked" <%= executive.status === 'blocked' ?
                  'selected' : '' %>> Blocked
                </select>
              </div>
            </div>

            <!-- Last Updated Info -->
            <div class="bg-gray-50 border border-gray-200 rounded-xl p-4">
              <div class="flex items-center gap-2 text-sm text-gray-600">
                <svg
                  class="w-5 h-5 text-gray-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                  ></path>
                </svg>
                <span
                  >Last updated:
                  <span class="font-medium text-gray-900"
                    ><%= new
                    Date(executive.updatedAt).toLocaleDateString('en-US', {
                    year: 'numeric', month: 'long', day: 'numeric', hour:
                    '2-digit', minute: '2-digit' }) %></span
                  ></span
                >
              </div>
            </div>
          </form>
        </div>

        <!-- Footer with gradient border -->
        <div
          class="border-t-2 border-gray-100 bg-gradient-to-r from-gray-50 to-gray-100/50 px-8 py-5"
        >
          <div class="flex gap-3 justify-end">
            <button
              type="button"
              onclick="closeModal()"
              class="px-6 py-3 bg-white hover:bg-gray-50 text-gray-700 font-semibold rounded-xl border-2 border-gray-200 transition-all duration-200 ease-in-out hover:border-gray-300 hover:shadow-md transform hover:scale-[1.02] flex items-center gap-2"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M6 18L18 6M6 6l12 12"
                ></path>
              </svg>
              Cancel
            </button>
            <button
              type="button"
              onclick="submitForm()"
              class="px-8 py-3 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold rounded-xl transition-all duration-200 ease-in-out shadow-lg shadow-blue-500/30 hover:shadow-xl hover:shadow-blue-500/40 transform hover:scale-[1.02] flex items-center gap-2"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"
                ></path>
              </svg>
              Update Executive
            </button>
          </div>
        </div>
      </div>
    </div>

    <script>
      function openModal() {
        const modal = document.getElementById("modal");
        const overlay = document.getElementById("modalOverlay");
        const content = document.getElementById("modalContent");

        modal.classList.remove("hidden");
        overlay.classList.remove("hidden");
        document.body.style.overflow = "hidden";

        setTimeout(() => {
          overlay.classList.add("animate-fade-in");
          content.classList.remove("scale-95", "opacity-0");
          content.classList.add("scale-100", "opacity-100", "animate-slide-up");
        }, 10);
      }

      function closeModal() {
        window.history.back();
      }

      function submitForm() {
        const form = document.getElementById("executiveForm");
        if (form.checkValidity()) {
          form.submit();
        } else {
          form.reportValidity();
        }
      }

      function togglePassword() {
        const passwordInput = document.getElementById("password");
        const eyeIcon = document.getElementById("eyeIcon");

        if (passwordInput.type === "password") {
          passwordInput.type = "text";
          eyeIcon.innerHTML = `
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
          `;
        } else {
          passwordInput.type = "password";
          eyeIcon.innerHTML = `
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          `;
        }
      }

      // Close modal when clicking outside
      document
        .getElementById("modalOverlay")
        .addEventListener("click", closeModal);

      // Close modal with Escape key
      document.addEventListener("keydown", function (event) {
        if (event.key === "Escape") {
          closeModal();
        }
      });

      // Auto-open modal when page loads
      window.addEventListener("DOMContentLoaded", function () {
        openModal();
      });
    </script>
  </body>
</html>
