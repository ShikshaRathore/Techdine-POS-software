<div class="min-h-screen bg-gray-50 antialiased">
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
        <% if (locals.success && success.length> 0) { %>
            <div class="mb-6 p-4 bg-green-50 border border-green-300 rounded-xl shadow-sm">
                <p class="text-green-700 font-medium text-sm">
                    <%= success %>
                </p>
            </div>
            <% } %>
                <% if (locals.error && error.length> 0) { %>
                    <div class="mb-6 p-4 bg-red-50 border border-red-300 rounded-xl shadow-sm">
                        <p class="text-red-700 font-medium text-sm">
                            <%= error %>
                        </p>
                    </div>
                    <% } %>

                        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

                            <div class="lg:col-span-2 space-y-6">

                                <div class="bg-white rounded-xl shadow-md p-6 sm:p-8">
                                    <h2 class="text-xl font-bold text-gray-900 mb-6 pb-4 border-b border-gray-100">
                                        Restaurant Information</h2>

                                    <div class="flex items-start space-x-4 pb-4 border-b border-gray-100 mb-6">
                                        <div
                                            class="w-16 h-16 sm:w-20 sm:h-20 bg-gradient-to-br from-orange-400 to-orange-600 rounded-xl flex items-center justify-center flex-shrink-0 shadow-md">
                                            <span class="text-3xl font-bold text-white">
                                                <%= restaurant.restaurantName.charAt(0).toUpperCase() %>
                                            </span>
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <div class="flex items-center space-x-3 mb-1">
                                                <h3 class="text-xl sm:text-2xl font-bold text-gray-900 truncate">
                                                    <%= restaurant.restaurantName %>
                                                </h3>
                                                <span
                                                    class="px-2 py-0.5 text-xs font-semibold rounded-full <%= restaurant.isActive ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                                    <%= restaurant.isActive ? 'ACTIVE' : 'INACTIVE' %>
                                                </span>
                                            </div>
                                            <p class="text-sm text-gray-500 mb-2">
                                                <%= branches[0]?.address || 'MP Nagar, Bhopal, Madhya Pradesh' %>
                                            </p>
                                            <button
                                                class="text-xs sm:text-sm font-medium text-indigo-600 hover:text-indigo-800 transition">
                                                Impersonate
                                            </button>
                                        </div>
                                    </div>

                                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-8 gap-y-4">
                                        <% const infoDetails=[ { label: 'Email Address' , value: restaurant.email }, {
                                            label: 'Time Zone' , value: branches[0]?.timezone || 'Asia/Kolkata' }, {
                                            label: 'Country' , value: 'ðŸ‡®ðŸ‡³ India' }, { label: 'Currency' ,
                                            value: 'Dollars (USD)' }, { label: 'Date Joined' , value: new
                                            Date(restaurant.createdAt).toLocaleString('en-US', { weekday: 'short' ,
                                            year: 'numeric' , month: 'short' , day: 'numeric' , hour: '2-digit' ,
                                            minute: '2-digit' }) } ]; %>
                                            <% infoDetails.forEach(item=> { %>
                                                <div class="space-y-1">
                                                    <p class="text-sm font-medium text-gray-500">
                                                        <%= item.label %>
                                                    </p>
                                                    <p class="text-sm text-gray-900 break-all font-semibold">
                                                        <%= item.value %>
                                                    </p>
                                                </div>
                                                <% }); %>
                                    </div>
                                </div>

                                <div class="bg-white rounded-xl shadow-md p-6 sm:p-8">
                                    <div class="flex items-start justify-between mb-6 pb-4 border-b border-gray-100">
                                        <h3 class="text-xl font-bold text-gray-900">Current Package</h3>
                                        <% if (currentPackage && currentPackage.isTrial) { %>
                                            <span
                                                class="px-3 py-1 bg-yellow-100 text-yellow-800 text-xs font-bold rounded-full shadow-sm">
                                                TRIAL
                                            </span>
                                            <% } %>
                                    </div>

                                    <% if (currentPackage) { %>
                                        <div class="space-y-3">
                                            <div
                                                class="flex justify-between items-center py-2 border-b border-gray-100">
                                                <span class="text-sm font-medium text-gray-600">Package Name:</span>
                                                <span class="text-sm font-semibold text-gray-900">
                                                    <%= currentPackage.name %>
                                                </span>
                                            </div>
                                            <div
                                                class="flex justify-between items-center py-2 border-b border-gray-100">
                                                <span class="text-sm font-medium text-gray-600">Package Type:</span>
                                                <span class="text-sm font-semibold text-gray-900 capitalize">
                                                    <%= currentPurchase.billingCycle.charAt(0).toUpperCase() +
                                                        currentPurchase.billingCycle.slice(1) %>
                                                        <% if (currentPackage.isTrial) { %>(Trial)<% } %>
                                                </span>
                                            </div>
                                            <% if (trialExpiresOn) { %>
                                                <div class="flex justify-between items-center pt-2">
                                                    <span class="text-sm font-medium text-gray-600">Trial Expires
                                                        On:</span>
                                                    <span class="text-sm font-bold text-red-600">
                                                        <%= trialExpiresOn.toLocaleDateString('en-US', { day: 'numeric'
                                                            , month: 'short' , year: 'numeric' }) %>
                                                    </span>
                                                </div>
                                                <% } %>
                                        </div>
                                        <% } else { %>
                                            <p class="text-sm text-gray-600 font-medium py-4 text-center">No active
                                                package.</p>
                                            <% } %>
                                </div>

                                <div class="bg-white rounded-xl shadow-md overflow-hidden">
                                    <div class="p-6 sm:p-8">
                                        <h3 class="text-xl font-bold text-gray-900 mb-6 pb-4 border-b border-gray-100">
                                            Branches (<%= branches.length %>)</h3>

                                        <div class="overflow-x-auto">
                                            <table class="min-w-full divide-y divide-gray-200">
                                                <thead>
                                                    <tr class="bg-gray-50">
                                                        <th
                                                            class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                                            #</th>
                                                        <th
                                                            class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                                            Branch Name</th>
                                                        <th
                                                            class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider hidden sm:table-cell">
                                                            Branch Address</th>
                                                        <th
                                                            class="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                                            Orders</th>
                                                    </tr>
                                                </thead>
                                                <tbody class="bg-white divide-y divide-gray-100">
                                                    <% branches.forEach((branch, index)=> { %>
                                                        <tr class="hover:bg-gray-50 transition">
                                                            <td
                                                                class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
                                                                <%= index + 1 %>
                                                            </td>
                                                            <td
                                                                class="px-4 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                                                <%= branch.branchName %>
                                                            </td>
                                                            <td
                                                                class="px-4 py-4 whitespace-nowrap text-sm text-gray-600 hidden sm:table-cell max-w-xs truncate">
                                                                <%= branch.address %>
                                                            </td>
                                                            <td
                                                                class="px-4 py-4 whitespace-nowrap text-sm text-gray-900 text-right font-semibold">
                                                                <%= branch.totalOrders || 0 %>
                                                            </td>
                                                        </tr>
                                                        <% }); %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                                <div class="bg-white rounded-xl shadow-md overflow-hidden">
                                    <div class="p-6 sm:p-8">
                                        <h3 class="text-xl font-bold text-gray-900 mb-6 pb-4 border-b border-gray-100">
                                            Payment History (<%= purchases.length %>)</h3>

                                        <div class="overflow-x-auto">
                                            <table class="min-w-full divide-y divide-gray-200">
                                                <thead>
                                                    <tr class="bg-gray-50">
                                                        <th
                                                            class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                                            #</th>
                                                        <th
                                                            class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider hidden sm:table-cell">
                                                            Package</th>
                                                        <th
                                                            class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider hidden lg:table-cell">
                                                            Cycle</th>
                                                        <th
                                                            class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider hidden md:table-cell">
                                                            Payment Date</th>
                                                        <th
                                                            class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                                            Transaction ID</th>
                                                        <th
                                                            class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider hidden xl:table-cell">
                                                            Gateway</th>
                                                        <th
                                                            class="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                                            Amount</th>
                                                        <th
                                                            class="px-4 py-3 text-center text-xs font-semibold text-gray-600 uppercase tracking-wider hidden sm:table-cell">
                                                            Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody class="bg-white divide-y divide-gray-100">
                                                    <% purchases.forEach((purchase, index)=> { %>
                                                        <tr class="hover:bg-gray-50 transition">
                                                            <td
                                                                class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
                                                                <%= index + 1 %>
                                                            </td>
                                                            <td
                                                                class="px-4 py-4 whitespace-nowrap text-sm hidden sm:table-cell">
                                                                <span
                                                                    class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-indigo-50 text-indigo-700">
                                                                    <%= purchase.packageName %>
                                                                </span>
                                                            </td>
                                                            <td
                                                                class="px-4 py-4 whitespace-nowrap text-sm text-gray-600 hidden lg:table-cell capitalize">
                                                                <%= purchase.billingCycle %>
                                                            </td>
                                                            <td
                                                                class="px-4 py-4 whitespace-nowrap text-sm text-gray-600 hidden md:table-cell">
                                                                <%= new
                                                                    Date(purchase.paymentDate).toLocaleDateString('en-US',
                                                                    { day: 'numeric' , month: 'short' , year: 'numeric'
                                                                    }) %>
                                                            </td>
                                                            <td
                                                                class="px-4 py-4 text-sm text-gray-900 font-mono text-xs max-w-xs truncate">
                                                                <%= purchase.transactionId || 'N/A' %>
                                                            </td>
                                                            <td
                                                                class="px-4 py-4 whitespace-nowrap text-sm text-gray-600 capitalize hidden xl:table-cell">
                                                                <span
                                                                    class="px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-700">
                                                                    <%= purchase.paymentGateway %>
                                                                </span>
                                                            </td>
                                                            <td
                                                                class="px-4 py-4 whitespace-nowrap text-sm text-gray-900 font-bold text-right">
                                                                $<%= purchase.amount.toFixed(2) %>
                                                            </td>
                                                            <td
                                                                class="px-4 py-4 whitespace-nowrap text-sm text-center hidden sm:table-cell">
                                                                <button
                                                                    class="text-indigo-600 hover:text-indigo-800 transition"
                                                                    aria-label="Download Invoice">
                                                                    <svg class="w-5 h-5" fill="none"
                                                                        stroke="currentColor" viewBox="0 0 24 24">
                                                                        <path stroke-linecap="round"
                                                                            stroke-linejoin="round" stroke-width="2"
                                                                            d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                                                                    </svg>
                                                                </button>
                                                            </td>
                                                        </tr>
                                                        <% }); %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="lg:col-span-1">
                                <div class="bg-white rounded-xl shadow-md overflow-hidden sticky top-24">
                                    <div class="p-6 sm:p-8">
                                        <div
                                            class="flex items-center justify-between mb-8 pb-4 border-b border-gray-100">
                                            <h3 class="text-xl font-bold text-gray-900">Account Admin</h3>
                                            <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor"
                                                viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                            </svg>
                                        </div>

                                        <div class="flex flex-col items-center text-center mb-8">
                                            <div
                                                class="w-24 h-24 bg-gray-300 rounded-full flex items-center justify-center mb-4 text-gray-600 font-bold text-4xl">
                                                <%= restaurant.username ? restaurant.username.substring(0,
                                                    2).toUpperCase() : 'SR' %>
                                            </div>
                                            <h4 class="text-xl font-bold text-gray-900 mb-1">
                                                <%= restaurant.username || 'Shiksha Rathore' %>
                                            </h4>
                                            <p class="text-sm text-gray-500 break-all font-medium">
                                                <%= restaurant.email %>
                                            </p>
                                        </div>

                                        <div class="space-y-4">
                                            <button
                                                class="w-full px-4 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-lg transition hover:shadow-sm">
                                                Change Password
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
    </main>
</div>

<div id="extendTrialModal"
    class="hidden fixed inset-0 bg-black bg-opacity-40 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-xl shadow-lg max-w-sm w-full p-6 transition transform scale-100">
        <div class="flex justify-between items-center mb-5">
            <h3 class="text-xl font-bold text-gray-900">Extend Trial Period</h3>
            <button onclick="document.getElementById('extendTrialModal').classList.add('hidden')"
                class="text-gray-400 hover:text-gray-600 transition" aria-label="Close modal">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        <form action="/admin-dashboard/restaurants/<%= restaurant._id %>/extend-trial" method="POST">
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">Number of Days to Extend</label>
                <input type="number" name="days" min="1" max="365" value="30" required class="w-full px-4 py-2 border border-gray-300 rounded-lg text-base text-gray-900 placeholder-gray-400
                           focus:ring-indigo-500 focus:border-indigo-500 transition shadow-sm">
            </div>

            <div class="flex justify-end space-x-3">
                <button type="button" onclick="document.getElementById('extendTrialModal').classList.add('hidden')"
                    class="px-5 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium rounded-lg transition duration-150 ease-in-out">
                    Cancel
                </button>
                <button type="submit"
                    class="px-5 py-2 bg-orange-600 hover:bg-orange-700 text-white font-medium rounded-lg transition duration-150 ease-in-out shadow-md">
                    Extend Trial
                </button>
            </div>
        </form>
    </div>
</div>