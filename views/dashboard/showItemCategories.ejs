<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Item Categories</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50 min-h-screen">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-4 sm:py-6">
    <!-- Header -->
    <h1 class="text-xl sm:text-2xl font-bold text-gray-900 mb-4 sm:mb-6">
      Item Categories
    </h1>

    <!-- Search and Add Button Row -->
    <div class="flex flex-col sm:flex-row gap-3 mb-4 sm:mb-5">
      <div class="flex-1">
        <input type="text" id="searchInput" placeholder="Search your item category here"
          class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent" />
      </div>
      <form action="/addItemCategory/<%= branchId %>" method="GET">
        <button type="submit"
          class="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 text-sm rounded-lg font-medium whitespace-nowrap transition-colors">
          Add Item Category
        </button>
      </form>
    </div>

    <!-- Table Container -->
    <div class="bg-white rounded-lg shadow-sm overflow-hidden border border-gray-200">
      <!-- Table Header -->
      <div class="hidden sm:grid grid-cols-12 gap-3 px-4 py-3 bg-gray-50 border-b border-gray-200">
        <div class="col-span-5">
          <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider">
            Item Category
          </h3>
        </div>
        <div class="col-span-4">
          <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider">
            Menu Items
          </h3>
        </div>
        <div class="col-span-3 text-right">
          <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider">
            Action
          </h3>
        </div>
      </div>

      <!-- Table Rows Container -->
      <div id="categoryList">
        <% if (categoryStats && categoryStats.length> 0) { %>
          <% categoryStats.forEach(stat=> { %>
            <div class="category-row border-b border-gray-200 last:border-b-0 hover:bg-gray-50 transition-colors"
              data-category="<%= stat._id.toLowerCase() %>">
              <div class="grid grid-cols-1 sm:grid-cols-12 gap-2 sm:gap-3 px-4 py-3 sm:py-4">
                <div class="sm:col-span-5 flex items-center justify-between sm:justify-start">
                  <span class="text-sm font-medium text-gray-900">
                    <%= stat._id %>
                  </span>
                  <span class="sm:hidden text-xs text-gray-500">
                    <%= stat.totalItems %> Item(s)
                  </span>
                </div>

                <div class="hidden sm:flex sm:col-span-4 items-center">
                  <span class="text-sm text-gray-600">
                    <%= stat.totalItems %> Item(s)
                  </span>
                </div>

                <!-- Action Buttons -->
                <div class="sm:col-span-3 flex items-center justify-end gap-2">
                  <button onclick="openEditModal('<%= stat.categoryId %>', '<%= stat.categoryName %>')"
                    class="flex items-center px-3 py-1.5 text-xs border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition-colors">
                    <svg class="w-3.5 h-3.5 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z">
                      </path>
                    </svg>
                    Update
                  </button>
                  <button onclick="openDeleteModal('<%= stat.categoryId %>', '<%= stat.categoryName %>')"
                    class="p-1.5 border border-red-300 rounded-md text-red-600 hover:bg-red-50 transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16">
                      </path>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
            <% }) %>
              <% } else { %>
                <div class="px-4 py-8 text-center text-gray-500 text-sm">
                  No categories found.
                </div>
                <% } %>
      </div>

      <!-- No Results Message -->
      <div id="noResults" class="hidden px-4 py-8 text-center text-gray-500 text-sm">
        No categories found matching your search.
      </div>
    </div>
  </div>

  <!-- Edit Modal -->
  <div id="editModal"
    class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50 flex items-center justify-center p-4">
    <div class="relative mx-auto p-6 border w-full max-w-md shadow-xl rounded-lg bg-white">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-xl font-semibold text-gray-900">Edit Category</h3>
        <button onclick="closeEditModal()" class="text-gray-400 hover:text-gray-600 transition-colors">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <form action="/dashboard/categories/edit" method="POST" class="space-y-4">
        <input type="hidden" id="editCategoryId" name="categoryId">

        <div>
          <label for="editCategoryName" class="block text-sm font-medium text-gray-700 mb-2">
            Category Name
          </label>
          <input type="text" placeholder="" id="editCategoryName" name="categoryName" required
            class="w-full px-4 py-2.5 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
        </div>

        <div class="flex gap-3 mt-6 pt-2">
          <button type="button" onclick="closeEditModal()"
            class="flex-1 bg-gray-100 text-gray-700 px-4 py-2.5 rounded-lg hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2 transition-all font-medium">
            Cancel
          </button>
          <button type="submit"
            class="flex-1 bg-blue-600 text-white px-4 py-2.5 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all font-medium shadow-sm">
            Save Changes
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Delete Modal -->
  <div id="deleteModal"
    class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50 flex items-center justify-center p-4">
    <div class="relative mx-auto p-6 border w-full max-w-md shadow-xl rounded-lg bg-white">
      <div class="flex flex-col items-center">
        <div class="mx-auto flex items-center justify-center h-14 w-14 rounded-full bg-red-100 mb-4">
          <svg class="h-7 w-7 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z">
            </path>
          </svg>
        </div>

        <h3 class="text-xl font-semibold text-gray-900 mb-3">Delete Category</h3>

        <div class="text-center mb-6">
          <p class="text-sm text-gray-600">
            Are you sure you want to delete <span id="deleteCategoryName" class="font-semibold text-gray-900"></span>?
          </p>
          <p class="text-sm text-gray-500 mt-1">
            This action cannot be undone.
          </p>
        </div>

        <form action="/dashboard/categories/delete" method="POST" class="flex gap-3 w-full">
          <input type="hidden" id="deleteCategoryId" name="categoryId">

          <button type="button" onclick="closeDeleteModal()"
            class="flex-1 bg-gray-100 text-gray-700 px-4 py-2.5 rounded-lg hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2 transition-all font-medium">
            Cancel
          </button>
          <button type="submit"
            class="flex-1 bg-red-600 text-white px-4 py-2.5 rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-all font-medium shadow-sm">
            Delete
          </button>
        </form>
      </div>
    </div>
  </div>


</body>

</html>