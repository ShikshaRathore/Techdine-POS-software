<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Staff Management</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
</head>

<body class="bg-gray-50">
  <div class="container mx-auto px-4 py-8 max-w-7xl">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-semibold text-gray-900 mb-2">Staff Management</h1>
      <p class="text-gray-500">Manage your team members</p>
    </div>

    <!-- Search and Actions -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
      <div class="relative w-full md:w-96">
        <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 text-sm"></i>
        <input type="text" id="searchInput" placeholder="Search by name or email"
          class="w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent text-sm" />
      </div>
      <div class="flex gap-3 w-full md:w-auto">
        <button onclick="exportToExcel()"
          class="flex-1 md:flex-none px-4 py-2.5 bg-white border border-gray-300 rounded-lg text-gray-700 text-sm font-medium hover:bg-gray-50 transition-all">
          <i class="fas fa-download mr-2"></i>Export
        </button>
        <button onclick="openAddModal()"
          class="flex-1 md:flex-none px-4 py-2.5 bg-orange-500 text-white rounded-lg text-sm font-medium hover:bg-orange-600 transition-all">
          <i class="fas fa-plus mr-2"></i>Add Member
        </button>
      </div>
    </div>

    <!-- Hotel Admin -->
    <div class="mb-4">
      <h2 class="text-sm font-medium text-gray-600 mb-3 uppercase tracking-wide">Hotel Administrator</h2>
      <div class="bg-white rounded-lg border border-gray-200 p-4">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
              <span class="text-blue-600 font-medium text-sm">
                <%= hotelAdmin.username.charAt(0).toUpperCase() %>
              </span>
            </div>
            <div>
              <div class="flex items-center gap-2">
                <h3 class="font-medium text-gray-900">
                  <%= hotelAdmin.username %>
                </h3>
                <% if (currentUser && currentUser._id.toString()===hotelAdmin._id.toString()) { %>
                  <span class="px-2 py-0.5 bg-blue-50 text-blue-700 text-xs rounded">You</span>
                  <% } %>
              </div>
              <p class="text-sm text-gray-500 mt-0.5">
                <%= hotelAdmin.email %>
              </p>
              <p class="text-xs text-gray-400 mt-0.5">
                <%= hotelAdmin.restaurantName %>
              </p>
            </div>
          </div>
          <div>
            <span
              class="inline-block px-3 py-1.5 bg-blue-50 text-blue-700 rounded-lg text-sm font-medium border border-blue-200">
              Hotel Admin
            </span>
          </div>
        </div>
      </div>
    </div>

    <!-- Staff Members -->
    <div>
      <div class="flex items-center justify-between mb-3">
        <h2 class="text-sm font-medium text-gray-600 uppercase tracking-wide">Staff Members</h2>
        <span class="text-xs text-gray-500">
          <%= staff ? staff.length : 0 %> members
        </span>
      </div>

      <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
        <table class="w-full">
          <thead class="bg-gray-50 border-b border-gray-200">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-600 uppercase tracking-wider">
                Name
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-600 uppercase tracking-wider">
                Email
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-600 uppercase tracking-wider">
                Role
              </th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-600 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody id="staffTableBody" class="divide-y divide-gray-200">
            <% if (staff && staff.length> 0) { %>
              <% staff.forEach(function(member) { %>
                <tr class="hover:bg-gray-50 transition-colors staff-row" data-name="<%= member.name.toLowerCase() %>"
                  data-email="<%= member.email.toLowerCase() %>">
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-3">
                      <div class="w-8 h-8 bg-orange-100 rounded-full flex items-center justify-center flex-shrink-0">
                        <span class="text-orange-600 font-medium text-xs">
                          <%= member.name.charAt(0).toUpperCase() %>
                        </span>
                      </div>
                      <span class="text-sm font-medium text-gray-900">
                        <%= member.name %>
                      </span>
                    </div>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-600">
                    <%= member.email %>
                  </td>
                  <td class="px-6 py-4">
                    <select onchange="updateRole('<%= member._id %>', this.value)"
                      class="text-sm px-3 py-1.5 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent bg-white">
                      <option value="Hotel-Admin" <%=member.role==='Hotel-Admin' ? 'selected' : '' %>>Hotel-Admin
                      </option>
                      <option value="Branch-Head" <%=member.role==='Branch-Head' ? 'selected' : '' %>>Branch-Head
                      </option>
                      <option value="Chef" <%=member.role==='Chef' ? 'selected' : '' %>>Chef</option>
                      <option value="Waiter" <%=member.role==='Waiter' ? 'selected' : '' %>>Waiter</option>
                    </select>
                  </td>
                  <td class="px-6 py-4">
                    <div class="flex justify-end gap-2">
                      <button
                        onclick="openUpdateModal('<%= member._id %>', '<%= member.name %>', '<%= member.email %>', '<%= member.phone %>', '<%= member.role %>')"
                        class="px-3 py-1.5 text-sm text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-all">
                        <i class="fas fa-edit mr-1.5"></i>Edit
                      </button>
                      <button onclick="deleteStaff('<%= member._id %>', '<%= member.name %>')"
                        class="px-3 py-1.5 text-sm text-white bg-red-500 rounded-md hover:bg-red-600 transition-all">
                        <i class="fas fa-trash"></i>
                      </button>
                    </div>
                  </td>
                </tr>
                <% }); %>
                  <% } else { %>
                    <tr>
                      <td colspan="4" class="px-6 py-12 text-center">
                        <div class="flex flex-col items-center gap-2">
                          <i class="fas fa-users text-gray-300 text-3xl mb-2"></i>
                          <p class="text-gray-500 text-sm">No staff members found</p>
                          <button onclick="openAddModal()"
                            class="mt-3 px-4 py-2 bg-orange-500 text-white text-sm rounded-lg hover:bg-orange-600 transition">
                            Add your first member
                          </button>
                        </div>
                      </td>
                    </tr>
                    <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Add Member Modal -->
  <div id="addModal" class="hidden fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50 p-4">
    <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex justify-between items-center">
          <h2 class="text-lg font-semibold text-gray-900">Add New Member</h2>
          <button onclick="closeAddModal()" class="text-gray-400 hover:text-gray-600 transition">
            <i class="fas fa-times"></i>
          </button>
        </div>
      </div>

      <form action="/staff/add/<%= branchId %>" method="POST" class="p-6">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1.5">Name</label>
            <input type="text" name="name" required
              class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent"
              placeholder="Enter full name" />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1.5">Email</label>
            <input type="email" name="email" required
              class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent"
              placeholder="email@example.com" />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1.5">Phone</label>
            <input type="tel" name="phone" required
              class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent"
              placeholder="Phone number" />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1.5">Password</label>
            <input type="password" name="password" required
              class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent"
              placeholder="Create password" />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1.5">Role</label>
            <select name="role" required
              class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent">
              <option value="">Select role</option>
              <option value="Hotel-Admin">Hotel-Admin</option>
              <option value="Branch-Head">Branch-Head</option>
              <option value="Chef">Chef</option>
              <option value="Waiter">Waiter</option>
            </select>
          </div>
        </div>

        <div class="mt-6 flex gap-3">
          <button type="button" onclick="closeAddModal()"
            class="flex-1 px-4 py-2 text-sm border border-gray-300 rounded-md text-gray-700 font-medium hover:bg-gray-50 transition">
            Cancel
          </button>
          <button type="submit"
            class="flex-1 px-4 py-2 text-sm bg-orange-500 text-white rounded-md font-medium hover:bg-orange-600 transition">
            Add Member
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Update Member Modal -->
  <div id="updateModal" class="hidden fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50 p-4">
    <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex justify-between items-center">
          <h2 class="text-lg font-semibold text-gray-900">Update Member</h2>
          <button onclick="closeUpdateModal()" class="text-gray-400 hover:text-gray-600 transition">
            <i class="fas fa-times"></i>
          </button>
        </div>
      </div>

      <form id="updateForm" method="POST" class="p-6">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1.5">Name</label>
            <input type="text" id="updateName" name="name" required
              class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent" />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1.5">Email</label>
            <input type="email" id="updateEmail" name="email" required
              class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent" />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1.5">Phone</label>
            <input type="tel" id="updatePhone" name="phone" required
              class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent" />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1.5">Password</label>
            <input type="password" name="password"
              class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent"
              placeholder="Leave blank to keep current" />
            <p class="text-xs text-gray-500 mt-1">Only fill to change password</p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1.5">Role</label>
            <select id="updateRole" name="role" required
              class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent">
              <option value="Hotel-Admin">Hotel-Admin</option>
              <option value="Branch-Head">Branch-Head</option>
              <option value="Chef">Chef</option>
              <option value="Waiter">Waiter</option>
            </select>
          </div>
        </div>

        <div class="mt-6 flex gap-3">
          <button type="button" onclick="closeUpdateModal()"
            class="flex-1 px-4 py-2 text-sm border border-gray-300 rounded-md text-gray-700 font-medium hover:bg-gray-50 transition">
            Cancel
          </button>
          <button type="submit"
            class="flex-1 px-4 py-2 text-sm bg-orange-500 text-white rounded-md font-medium hover:bg-orange-600 transition">
            Update
          </button>
        </div>
      </form>
    </div>
  </div>
</body>

</html>