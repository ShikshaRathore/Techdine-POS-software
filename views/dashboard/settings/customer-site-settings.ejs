<!-- Customer Site Settings Section -->
<div id="Customer-Site" class="settings-content hidden">
  <div class="bg-white rounded-lg shadow-sm p-6">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6">
      Customer Site Settings
    </h2>

    <form
      action="/dashboard/<%= branchId %>/settings/customer-site"
      method="POST"
    >
      <div class="space-y-6">
        <!-- Customer Login Requirement -->
        <div
          class="flex items-start justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors"
        >
          <div class="flex-1">
            <h3 class="text-base font-medium text-gray-900 mb-1">
              Customer need to login to place order?
            </h3>
            <p class="text-sm text-gray-500">
              When enabled, customers must create an account and login before
              placing orders
            </p>
          </div>
          <label class="relative inline-flex items-center cursor-pointer ml-4">
            <input type="checkbox" name="requireLogin" <%=
            customerSiteSettings?.requireLogin ? 'checked' : '' %>
            class="sr-only peer">
            <div
              class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-orange-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-orange-500"
            ></div>
          </label>
        </div>

        <!-- Allow Customer Orders -->
        <div
          class="flex items-start justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors"
        >
          <div class="flex-1">
            <h3 class="text-base font-medium text-gray-900 mb-1">
              Allow Customer to place Orders
            </h3>
            <p class="text-sm text-gray-500">
              Enable this to allow customers to place orders through your
              website
            </p>
          </div>
          <label class="relative inline-flex items-center cursor-pointer ml-4">
            <input type="checkbox" name="allowOrders" <%=
            customerSiteSettings?.allowOrders !== false ? 'checked' : '' %>
            class="sr-only peer">
            <div
              class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-orange-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-orange-500"
            ></div>
          </label>
        </div>

        <!-- Allow Delivery Orders -->
        <div
          class="flex items-start justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors"
        >
          <div class="flex-1">
            <h3 class="text-base font-medium text-gray-900 mb-1">
              Allow Customer to place Delivery Orders
            </h3>
            <p class="text-sm text-gray-500">
              Enable delivery option for customer orders with address details
            </p>
          </div>
          <label class="relative inline-flex items-center cursor-pointer ml-4">
            <input type="checkbox" name="allowDelivery" <%=
            customerSiteSettings?.allowDelivery !== false ? 'checked' : '' %>
            class="sr-only peer">
            <div
              class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-orange-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-orange-500"
            ></div>
          </label>
        </div>

        <!-- Allow Pickup Orders -->
        <div
          class="flex items-start justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors"
        >
          <div class="flex-1">
            <h3 class="text-base font-medium text-gray-900 mb-1">
              Allow Customer to place Pickup Orders
            </h3>
            <p class="text-sm text-gray-500">
              Enable pickup option for customers to collect orders from
              restaurant
            </p>
          </div>
          <label class="relative inline-flex items-items cursor-pointer ml-4">
            <input type="checkbox" name="allowPickup" <%=
            customerSiteSettings?.allowPickup !== false ? 'checked' : '' %>
            class="sr-only peer">
            <div
              class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-orange-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-orange-500"
            ></div>
          </label>
        </div>

        <!-- Enable Waiter Request -->
        <div
          class="flex items-start justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors"
        >
          <div class="flex-1">
            <h3 class="text-base font-medium text-gray-900 mb-1">
              Enable Waiter Request
            </h3>
            <p class="text-sm text-gray-500">
              Allow customers to request waiter assistance through the website
              or app
            </p>
          </div>
          <label class="relative inline-flex items-center cursor-pointer ml-4">
            <input type="checkbox" name="enableWaiterRequest" <%=
            customerSiteSettings?.enableWaiterRequest !== false ? 'checked' : ''
            %> class="sr-only peer">
            <div
              class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-orange-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-orange-500"
            ></div>
          </label>
        </div>

        <!-- Default Table Reservation Status -->
        <div class="p-4 bg-gray-50 rounded-lg">
          <label class="block text-base font-medium text-gray-900 mb-3">
            Default Table Reservation Status
          </label>
          <p class="text-sm text-gray-500 mb-3">
            Choose the default status for new table reservations
          </p>
          <select
            name="defaultReservationStatus"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 bg-white text-gray-900"
          >
            <option value="Confirmed" <%=
            customerSiteSettings?.defaultReservationStatus === 'Confirmed' ?
            'selected' : '' %>> Confirmed - Automatically confirm reservations
            <option value="Pending" <%=
            customerSiteSettings?.defaultReservationStatus === 'Pending' ?
            'selected' : '' %>> Pending - Require manual confirmation
          </select>
        </div>

        <!-- Minimum Order Amount -->
        <div class="p-4 bg-gray-50 rounded-lg">
          <label class="block text-base font-medium text-gray-900 mb-3">
            Minimum Order Amount for Delivery
          </label>
          <p class="text-sm text-gray-500 mb-3">
            Set minimum order value required for delivery (leave 0 for no
            minimum)
          </p>
          <div class="relative">
            <span class="absolute left-4 top-3 text-gray-500">₹</span>
            <input
              type="number"
              name="minOrderAmount"
              value="<%= customerSiteSettings?.minOrderAmount || 0 %>"
              min="0"
              step="1"
              placeholder="0"
              class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
            />
          </div>
        </div>

        <!-- Delivery Radius -->
        <div class="p-4 bg-gray-50 rounded-lg">
          <label class="block text-base font-medium text-gray-900 mb-3">
            Delivery Radius (in kilometers)
          </label>
          <p class="text-sm text-gray-500 mb-3">
            Maximum distance for delivery orders (leave 0 for unlimited)
          </p>
          <div class="relative">
            <input
              type="number"
              name="deliveryRadius"
              value="<%= customerSiteSettings?.deliveryRadius || 0 %>"
              min="0"
              step="0.5"
              placeholder="0"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
            />
            <span class="absolute right-4 top-3 text-gray-500">km</span>
          </div>
        </div>

        <!-- Delivery Charges -->
        <div class="p-4 bg-gray-50 rounded-lg">
          <label class="block text-base font-medium text-gray-900 mb-3">
            Delivery Charges
          </label>
          <p class="text-sm text-gray-500 mb-3">
            Set flat delivery charges (leave 0 for free delivery)
          </p>
          <div class="relative">
            <span class="absolute left-4 top-3 text-gray-500">₹</span>
            <input
              type="number"
              name="deliveryCharges"
              value="<%= customerSiteSettings?.deliveryCharges || 0 %>"
              min="0"
              step="1"
              placeholder="0"
              class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
            />
          </div>
        </div>

        <!-- Operating Hours Notice -->
        <div class="p-4 bg-blue-50 border border-blue-200 rounded-lg">
          <div class="flex items-start">
            <svg
              class="w-5 h-5 text-blue-500 mt-0.5 mr-3 flex-shrink-0"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                clip-rule="evenodd"
              />
            </svg>
            <div>
              <h4 class="text-sm font-medium text-blue-900 mb-1">
                Operating Hours
              </h4>
              <p class="text-sm text-blue-700">
                Configure your restaurant's operating hours in the
                <strong>Branch Settings</strong> section to control when
                customers can place orders.
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Save Button -->
      <div class="flex justify-start mt-8 pt-6 border-t border-gray-200">
        <button
          type="submit"
          class="bg-orange-500 hover:bg-orange-600 text-white font-medium py-3 px-8 rounded-lg transition duration-200 flex items-center shadow-sm"
        >
          <svg
            class="w-5 h-5 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 13l4 4L19 7"
            />
          </svg>
          Save Settings
        </button>
      </div>
    </form>
  </div>
</div>
