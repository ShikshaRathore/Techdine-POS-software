<!-- views/includes/landing-site-content.ejs -->
<div class="space-y-6">
  <h2 class="text-2xl font-bold text-gray-800">Landing Site</h2>

  <div class="bg-white rounded-lg shadow-sm p-6 max-w-2xl">
    <h3 class="text-lg font-semibold text-gray-800 mb-4">
      Disable Landing Site
    </h3>
    <p class="text-sm text-gray-600 mb-4">
      Disable the landing site or set your custom landing site.
    </p>

    <div class="space-y-4">
      <div class="flex items-center gap-3">
        <input
          type="checkbox"
          id="disableLanding"
          class="w-4 h-4 text-orange-500 border-gray-300 rounded focus:ring-orange-500"
        />
        <label for="disableLanding" class="text-sm font-medium text-gray-700"
          >Disable Landing Site</label
        >
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2"
          >Landing Site Type</label
        >
        <select
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
        >
          <option value="custom">Custom</option>
          <option value="default">Default</option>
        </select>
      </div>

      <button
        class="px-6 py-2 bg-orange-500 text-white font-medium rounded-lg hover:bg-orange-600 transition-colors"
      >
        Save
      </button>
    </div>
  </div>
</div>
