<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>
        <%= appName %> â€“ Restaurant Details
    </title>

    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Dynamic Theme Color Shades -->
    <style>
        :root {
            --theme-color: <%=themeColor %>;
            --theme-light: color-mix(in srgb, var(--theme-color) 70%, white);
            --theme-dark: color-mix(in srgb, var(--theme-color) 85%, black);
        }
    </style>
</head>

<body class="bg-gray-50 antialiased min-h-screen">

    <div class="min-h-screen">

        <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8">

            <!-- Flash Messages -->
            <% if (locals.success && success.length> 0) { %>
                <div class="mb-6 p-4 bg-green-50 border border-green-300 rounded-xl shadow-sm">
                    <p class="text-green-700 font-medium text-sm">
                        <%= success %>
                    </p>
                </div>
                <% } %>

                    <% if (locals.error && error.length> 0) { %>
                        <div class="mb-6 p-4 bg-red-50 border border-red-300 rounded-xl shadow-sm">
                            <p class="text-red-700 font-medium text-sm">
                                <%= error %>
                            </p>
                        </div>
                        <% } %>


                            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

                                <!-- LEFT SIDE CONTENT -->
                                <div class="lg:col-span-2 space-y-6">

                                    <!-- Restaurant Info -->
                                    <div class="bg-white rounded-xl shadow-md p-6 sm:p-8">
                                        <h2 class="text-xl font-bold text-gray-900 mb-6 pb-4 border-b border-gray-100">
                                            Restaurant Information
                                        </h2>

                                        <div class="flex items-start space-x-4 pb-4 border-b border-gray-100 mb-6">

                                            <!-- Dynamic Gradient Icon -->
                                            <div
                                                class="w-16 h-16 sm:w-20 sm:h-20 rounded-xl flex items-center justify-center flex-shrink-0 shadow-md
                                   bg-[var(--theme-dark)] bg-gradient-to-br from-[var(--theme-light)] to-[var(--theme-dark)]">
                                                <span class="text-3xl font-bold text-white">
                                                    <%= restaurant.restaurantName.charAt(0).toUpperCase() %>
                                                </span>
                                            </div>

                                            <div class="flex-1 min-w-0">
                                                <div class="flex items-center space-x-3 mb-1">
                                                    <h3 class="text-xl sm:text-2xl font-bold text-gray-900 truncate">
                                                        <%= restaurant.restaurantName %>
                                                    </h3>

                                                    <span class="px-2 py-0.5 text-xs font-semibold rounded-full
                                    <%= restaurant.isActive
                                        ? 'bg-green-100 text-green-800'
                                        : 'bg-red-100 text-red-800'
                                    %>">
                                                        <%= restaurant.isActive ? 'ACTIVE' : 'INACTIVE' %>
                                                    </span>
                                                </div>

                                                <p class="text-sm text-gray-500 mb-2">
                                                    <%= branches[0]?.address || 'Not Provided' %>
                                                </p>

                                                <button
                                                    class="text-xs sm:text-sm font-medium text-[var(--theme-color)] hover:opacity-80 transition">
                                                    Impersonate
                                                </button>
                                            </div>
                                        </div>

                                        <!-- Restaurant Details Grid -->
                                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-8 gap-y-4">

                                            <% const infoDetails=[ { label: 'Email Address' , value: restaurant.email },
                                                { label: 'Time Zone' , value: branches[0]?.timezone || settings.timezone
                                                || 'Asia/Kolkata' }, { label: 'Country' , value: settings.country
                                                || 'India' }, { label: 'Currency' , value: settings.currency
                                                || 'USD ($)' }, { label: 'Date Joined' , value: new
                                                Date(restaurant.createdAt) .toLocaleString('en-US', { weekday: 'short' ,
                                                year: 'numeric' , month: 'short' , day: 'numeric' , hour: '2-digit' ,
                                                minute: '2-digit' }) } ]; %>

                                                <% infoDetails.forEach(item=> { %>
                                                    <div class="space-y-1">
                                                        <p class="text-sm font-medium text-gray-500">
                                                            <%= item.label %>
                                                        </p>
                                                        <p class="text-sm text-gray-900 font-semibold break-all">
                                                            <%= item.value %>
                                                        </p>
                                                    </div>
                                                    <% }) %>

                                        </div>
                                    </div>

                                    <!-- Current Package -->
                                    <div class="bg-white rounded-xl shadow-md p-6 sm:p-8">
                                        <div
                                            class="flex items-start justify-between mb-6 pb-4 border-b border-gray-100">
                                            <h3 class="text-xl font-bold text-gray-900">Current Package</h3>

                                            <% if (currentPackage && currentPackage.isTrial) { %>
                                                <span
                                                    class="px-3 py-1 bg-yellow-100 text-yellow-800 text-xs font-bold rounded-full shadow-sm">
                                                    TRIAL
                                                </span>
                                                <% } %>
                                        </div>

                                        <% if (currentPackage) { %>

                                            <div class="space-y-3">
                                                <div
                                                    class="flex justify-between items-center py-2 border-b border-gray-100">
                                                    <span class="text-sm font-medium text-gray-600">Package Name:</span>
                                                    <span class="text-sm font-semibold text-gray-900">
                                                        <%= currentPackage.name %>
                                                    </span>
                                                </div>

                                                <div
                                                    class="flex justify-between items-center py-2 border-b border-gray-100">
                                                    <span class="text-sm font-medium text-gray-600">Billing
                                                        Cycle:</span>
                                                    <span class="text-sm font-semibold text-gray-900 capitalize">
                                                        <%= currentPurchase.billingCycle %>
                                                            <% if (currentPackage.isTrial) { %> (Trial) <% } %>
                                                    </span>
                                                </div>

                                                <% if (trialExpiresOn) { %>
                                                    <div class="flex justify-between items-center pt-2">
                                                        <span class="text-sm font-medium text-gray-600">Trial Expires
                                                            On:</span>
                                                        <span class="text-sm font-bold text-red-600">
                                                            <%= trialExpiresOn.toLocaleDateString('en-US', {
                                                                day:'numeric', month:'short', year:'numeric' }) %>
                                                        </span>
                                                    </div>
                                                    <% } %>

                                            </div>

                                            <% } else { %>

                                                <p class="text-sm text-gray-600 font-medium py-4 text-center">
                                                    No active package.
                                                </p>

                                                <% } %>
                                    </div>

                                    <!-- Branch List -->
                                    <div class="bg-white rounded-xl shadow-md overflow-hidden">
                                        <div class="p-6 sm:p-8">
                                            <h3
                                                class="text-xl font-bold text-gray-900 mb-6 pb-4 border-b border-gray-100">
                                                Branches (<%= branches.length %>)
                                            </h3>

                                            <div class="overflow-x-auto">
                                                <table class="min-w-full divide-y divide-gray-200">
                                                    <thead>
                                                        <tr class="bg-gray-50">
                                                            <th
                                                                class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                                                #</th>
                                                            <th
                                                                class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                                                Branch Name</th>
                                                            <th
                                                                class="px-4 py-3 hidden sm:table-cell text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                                                Address</th>
                                                            <th
                                                                class="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                                                Orders</th>
                                                        </tr>
                                                    </thead>

                                                    <tbody class="bg-white divide-y divide-gray-100">
                                                        <% branches.forEach((branch, index)=> { %>

                                                            <tr class="hover:bg-gray-50 transition">
                                                                <td class="px-4 py-4 text-sm text-gray-500">
                                                                    <%= index + 1 %>
                                                                </td>
                                                                <td class="px-4 py-4 text-sm font-medium text-gray-900">
                                                                    <%= branch.branchName %>
                                                                </td>
                                                                <td
                                                                    class="px-4 py-4 text-sm text-gray-600 hidden sm:table-cell max-w-xs truncate">
                                                                    <%= branch.address %>
                                                                </td>
                                                                <td
                                                                    class="px-4 py-4 text-sm text-gray-900 text-right font-semibold">
                                                                    <%= branch.totalOrders || 0 %>
                                                                </td>
                                                            </tr>

                                                            <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>

                                        </div>
                                    </div>

                                    <!-- Payment History -->
                                    <div class="bg-white rounded-xl shadow-md overflow-hidden">
                                        <div class="p-6 sm:p-8">

                                            <h3
                                                class="text-xl font-bold text-gray-900 mb-6 pb-4 border-b border-gray-100">
                                                Payment History (<%= purchases.length %>)
                                            </h3>

                                            <div class="overflow-x-auto">

                                                <table class="min-w-full divide-y divide-gray-200">
                                                    <thead>
                                                        <tr class="bg-gray-50">
                                                            <th
                                                                class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                                                #</th>
                                                            <th
                                                                class="px-4 py-3 hidden sm:table-cell text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                                                Package</th>
                                                            <th
                                                                class="px-4 py-3 hidden lg:table-cell text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                                                Cycle</th>
                                                            <th
                                                                class="px-4 py-3 hidden md:table-cell text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                                                Date</th>
                                                            <th
                                                                class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                                                Transaction</th>
                                                            <th
                                                                class="px-4 py-3 hidden xl:table-cell text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                                                Gateway</th>
                                                            <th
                                                                class="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                                                Amount</th>
                                                            <th
                                                                class="px-4 py-3 hidden sm:table-cell text-center text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                                                Action</th>
                                                        </tr>
                                                    </thead>

                                                    <tbody class="bg-white divide-y divide-gray-100">

                                                        <% purchases.forEach((purchase, index)=> { %>

                                                            <tr class="hover:bg-gray-50 transition">
                                                                <td class="px-4 py-4 text-sm text-gray-500">
                                                                    <%= index + 1 %>
                                                                </td>

                                                                <td class="px-4 py-4 hidden sm:table-cell text-sm">
                                                                    <span class="inline-flex px-3 py-1 rounded-full text-xs font-medium
                                                             bg-[var(--theme-light)] text-[var(--theme-dark)]">
                                                                        <%= purchase.packageName %>
                                                                    </span>
                                                                </td>

                                                                <td
                                                                    class="px-4 py-4 hidden lg:table-cell text-sm text-gray-600 capitalize">
                                                                    <%= purchase.billingCycle %>
                                                                </td>

                                                                <td
                                                                    class="px-4 py-4 hidden md:table-cell text-sm text-gray-600">
                                                                    <%= new
                                                                        Date(purchase.paymentDate).toLocaleDateString('en-US',
                                                                        { day:'numeric', month:'short', year:'numeric'
                                                                        }) %>
                                                                </td>

                                                                <td
                                                                    class="px-4 py-4 text-sm text-gray-900 font-mono max-w-xs truncate">
                                                                    <%= purchase.transactionId || 'N/A' %>
                                                                </td>

                                                                <td
                                                                    class="px-4 py-4 hidden xl:table-cell text-sm text-gray-600 capitalize">
                                                                    <span
                                                                        class="px-3 py-1 rounded-full text-xs bg-gray-100 text-gray-700">
                                                                        <%= purchase.paymentGateway %>
                                                                    </span>
                                                                </td>

                                                                <td
                                                                    class="px-4 py-4 text-sm text-gray-900 font-bold text-right">
                                                                    <%= settings.currencySymbol || '$' %>
                                                                        <%= purchase.amount.toFixed(2) %>
                                                                </td>

                                                                <td class="px-4 py-4 hidden sm:table-cell text-center">
                                                                    <button
                                                                        class="text-[var(--theme-color)] hover:opacity-80 transition">
                                                                        <svg class="w-5 h-5 mx-auto" fill="none"
                                                                            stroke="currentColor" viewBox="0 0 24 24">
                                                                            <path stroke-linecap="round"
                                                                                stroke-linejoin="round" stroke-width="2"
                                                                                d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                                                                        </svg>
                                                                    </button>
                                                                </td>

                                                            </tr>

                                                            <% }) %>

                                                    </tbody>
                                                </table>

                                            </div>

                                        </div>
                                    </div>
                                </div>

                                <!-- RIGHT SIDE ADMIN BOX -->
                                <div class="lg:col-span-1">

                                    <div class="bg-white rounded-xl shadow-md overflow-hidden sticky top-24">
                                        <div class="p-6 sm:p-8">

                                            <div
                                                class="flex items-center justify-between mb-8 pb-4 border-b border-gray-100">
                                                <h3 class="text-xl font-bold text-gray-900">Account Admin</h3>

                                                <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                                </svg>
                                            </div>

                                            <div class="flex flex-col items-center text-center mb-8">

                                                <!-- Admin Avatar -->
                                                <div class="w-24 h-24 rounded-full flex items-center justify-center mb-4
                                        bg-[var(--theme-light)] text-[var(--theme-dark)]
                                        font-bold text-4xl shadow">
                                                    <%= restaurant.username ? restaurant.username.substring(0,
                                                        2).toUpperCase() : 'AD' %>
                                                </div>

                                                <h4 class="text-xl font-bold text-gray-900 mb-1">
                                                    <%= restaurant.username %>
                                                </h4>

                                                <p class="text-sm text-gray-500 font-medium break-all">
                                                    <%= restaurant.email %>
                                                </p>
                                            </div>

                                            <div class="space-y-4">
                                                <button class="w-full px-4 py-3 rounded-lg font-semibold transition hover:shadow-sm
                                       bg-[var(--theme-light)] text-[var(--theme-dark)] hover:opacity-90">
                                                    Change Password
                                                </button>
                                            </div>

                                        </div>
                                    </div>

                                </div>

                            </div>
        </main>
    </div>


    <!-- Extend Trial Modal -->
    <div id="extendTrialModal"
        class="hidden fixed inset-0 bg-black bg-opacity-40 z-50 flex items-center justify-center p-4">

        <div class="bg-white rounded-xl shadow-lg max-w-sm w-full p-6">

            <div class="flex justify-between items-center mb-5">
                <h3 class="text-xl font-bold text-gray-900">Extend Trial Period</h3>

                <button onclick="document.getElementById('extendTrialModal').classList.add('hidden')"
                    class="text-gray-400 hover:text-gray-600 transition">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <form action="/admin-dashboard/restaurants/<%= restaurant._id %>/extend-trial" method="POST">
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Number of Days</label>
                    <input type="number" name="days" min="1" max="365" value="30" required class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm
                              focus:ring-[var(--theme-color)] focus:border-[var(--theme-color)]">
                </div>

                <div class="flex justify-end space-x-3">
                    <button type="button" onclick="document.getElementById('extendTrialModal').classList.add('hidden')"
                        class="px-5 py-2 bg-gray-200 hover:bg-gray-300 rounded-lg text-gray-700 font-medium">
                        Cancel
                    </button>

                    <button type="submit"
                        class="px-5 py-2 bg-[var(--theme-color)] hover:opacity-90 text-white font-medium rounded-lg shadow-md">
                        Extend Trial
                    </button>
                </div>
            </form>

        </div>
    </div>

</body>

</html>