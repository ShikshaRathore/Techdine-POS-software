<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hero Section Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        :root {
            --theme-color: <%=branch.theme.primaryColor %>;
        }

        .btn-theme {
            background-color: var(--theme-color);
            color: #fff;
        }

        .btn-theme:hover {
            background-color: var(--theme-color);
            opacity: .9;
        }

        .theme-border {
            border-color: var(--theme-color) !important;
        }

        .theme-text {
            color: var(--theme-color) !important;
        }

        .theme-icon {
            color: var(--theme-color) !important;
            stroke: var(--theme-color) !important;
        }

        .theme-hover:hover {
            background-color: color-mix(in srgb, var(--theme-color) 15%, transparent) !important;
        }

        .theme-focus:focus {
            border-color: var(--theme-color) !important;
            box-shadow: 0 0 0 2px rgba(var(--theme-color), 0.2) !important;
        }

        .upload-box {
            transition: all 0.3s ease;
        }

        .upload-box:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        }

        .preview-image {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .preview-video {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }
    </style>
</head>

<body class="bg-gray-50 min-h-screen py-6 px-4">
    <div class="mx-auto">
        <!-- Header -->
        <div class="mb-6">
            <h1 class="text-2xl font-bold text-gray-900">Hero Section</h1>
            <p class="text-sm text-gray-500 mt-1">Manage promotional content</p>
        </div>

        <!-- Upload Boxes -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
            <!-- Add Video Box -->
            <div class="upload-box bg-white rounded-lg border-2 border-dashed border-gray-300 p-6 text-center cursor-pointer hover:border-gray-400"
                onclick="document.getElementById('videoModal').classList.remove('hidden')">
                <div class="preview-video rounded-lg h-32 flex items-center justify-center mb-3">
                    <svg class="w-12 h-12 text-white opacity-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                </div>
                <h3 class="font-semibold text-gray-900">Add Video</h3>
                <p class="text-xs text-gray-500 mt-1">Click to upload promotional video</p>
            </div>

            <!-- Add Image Box -->
            <div class="upload-box bg-white rounded-lg border-2 border-dashed border-gray-300 p-6 text-center cursor-pointer hover:border-gray-400"
                onclick="document.getElementById('imageModal').classList.remove('hidden')">
                <div class="preview-image rounded-lg h-32 flex items-center justify-center mb-3">
                    <svg class="w-12 h-12 text-white opacity-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                </div>
                <h3 class="font-semibold text-gray-900">Add Image</h3>
                <p class="text-xs text-gray-500 mt-1">Click to upload promotional image</p>
            </div>
        </div>

        <!-- Active Items -->
        <div class="bg-white rounded-lg border border-gray-200 p-5">
            <h3 class="font-semibold text-gray-900 mb-4">Active Content</h3>

            <div class="space-y-3">
                <!-- Videos -->
                <% if (videoOffers && videoOffers.length> 0) { %>
                    <% videoOffers.forEach(video=> { %>
                        <div class="flex items-start gap-3 p-3 bg-purple-50 rounded-lg">
                            <div class="flex-shrink-0 w-10 h-10 bg-purple-100 rounded flex items-center justify-center">
                                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                            <div class="flex-1 min-w-0">
                                <h4 class="text-sm font-medium text-gray-900 truncate">
                                    <%= video.heading %>
                                </h4>
                                <% if (video.subHeading) { %>
                                    <p class="text-xs text-gray-500 truncate">
                                        <%= video.subHeading %>
                                    </p>
                                    <% } %>
                                        <a href="<%= video.link %>" target="_blank"
                                            class="text-xs text-purple-600 hover:underline truncate block">
                                            <%= video.link %>
                                        </a>
                            </div>
                            <form action="/frontend-setting/hero-section/<%= branchId %>/video/<%= video._id %>/delete"
                                method="POST">
                                <button type="submit" class="text-red-400 hover:text-red-600 p-1.5">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                    </svg>
                                </button>
                            </form>
                        </div>
                        <% }) %>
                            <% } %>

                                <!-- Images -->
                                <% if (imageAds && imageAds.length> 0) { %>
                                    <% imageAds.forEach(image=> { %>
                                        <div class="flex items-start gap-3 p-3 bg-pink-50 rounded-lg">
                                            <div
                                                class="flex-shrink-0 w-10 h-10 bg-pink-100 rounded flex items-center justify-center">
                                                <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                                </svg>
                                            </div>
                                            <div class="flex-1 min-w-0">
                                                <h4 class="text-sm font-medium text-gray-900 truncate">
                                                    <%= image.heading %>
                                                </h4>
                                                <% if (image.subHeading) { %>
                                                    <p class="text-xs text-gray-500 truncate">
                                                        <%= image.subHeading %>
                                                    </p>
                                                    <% } %>
                                                        <a href="<%= image.link %>" target="_blank"
                                                            class="text-xs text-pink-600 hover:underline truncate block">
                                                            <%= image.link %>
                                                        </a>
                                            </div>
                                            <form
                                                action="/frontend-setting/hero-section/<%= branchId %>/image/<%= image._id %>/delete"
                                                method="POST">
                                                <button type="submit" class="text-red-400 hover:text-red-600 p-1.5">
                                                    <svg class="w-5 h-5" fill="none" stroke="currentColor"
                                                        viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                    </svg>
                                                </button>
                                            </form>
                                        </div>
                                        <% }) %>
                                            <% } %>

                                                <% if ((!videoOffers || videoOffers.length===0) && (!imageAds ||
                                                    imageAds.length===0)) { %>
                                                    <p class="text-center text-gray-400 text-sm py-6">No content added
                                                        yet</p>
                                                    <% } %>
            </div>
        </div>
    </div>

    <!-- Video Modal -->
    <div id="videoModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
        <div class="bg-white rounded-lg max-w-md w-full p-6">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-semibold text-gray-900">Add Video Offer</h2>
                <button onclick="document.getElementById('videoModal').classList.add('hidden')"
                    class="text-gray-400 hover:text-gray-600">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <form action="/frontend-setting/hero-section/<%= branchId %>/video" method="POST"
                enctype="multipart/form-data" class="space-y-3">
                <div>
                    <label class="block text-xs font-medium text-gray-700 mb-1">Heading</label>
                    <input type="text" name="heading" required
                        class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none theme-focus"
                        placeholder="Special Offer">
                </div>
                <div>
                    <label class="block text-xs font-medium text-gray-700 mb-1">Sub Heading</label>
                    <input type="text" name="subHeading"
                        class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none theme-focus"
                        placeholder="Limited time only">
                </div>
                <div>
                    <label class="block text-xs font-medium text-gray-700 mb-1">Video File</label>
                    <input type="file" name="video" accept="video/*" required
                        class="w-full text-sm border border-gray-300 rounded-lg focus:outline-none theme-focus file:mr-3 file:py-2 file:px-3 file:rounded-lg file:border-0 file:text-xs file:font-medium file:bg-gray-100 file:text-gray-700 hover:file:bg-gray-200">
                </div>
                <div>
                    <label class="block text-xs font-medium text-gray-700 mb-1">Link URL</label>
                    <input type="url" name="link" required
                        class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none theme-focus"
                        placeholder="https://example.com">
                </div>
                <button type="submit"
                    class="w-full btn-theme px-4 py-2.5 text-sm rounded-lg font-medium transition-all">
                    Add Video
                </button>
            </form>
        </div>
    </div>

    <!-- Image Modal -->
    <div id="imageModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
        <div class="bg-white rounded-lg max-w-md w-full p-6">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-semibold text-gray-900">Add Image Ad</h2>
                <button onclick="document.getElementById('imageModal').classList.add('hidden')"
                    class="text-gray-400 hover:text-gray-600">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <form action="/frontend-setting/hero-section/<%= branchId %>/image" method="POST"
                enctype="multipart/form-data" class="space-y-3">
                <div>
                    <label class="block text-xs font-medium text-gray-700 mb-1">Heading</label>
                    <input type="text" name="heading" required
                        class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none theme-focus"
                        placeholder="30% OFF on Pasta">
                </div>
                <div>
                    <label class="block text-xs font-medium text-gray-700 mb-1">Sub Heading</label>
                    <input type="text" name="subHeading"
                        class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none theme-focus"
                        placeholder="Limited time offer">
                </div>
                <div>
                    <label class="block text-xs font-medium text-gray-700 mb-1">Image File</label>
                    <input type="file" name="image" accept="image/*" required
                        class="w-full text-sm border border-gray-300 rounded-lg focus:outline-none theme-focus file:mr-3 file:py-2 file:px-3 file:rounded-lg file:border-0 file:text-xs file:font-medium file:bg-gray-100 file:text-gray-700 hover:file:bg-gray-200">
                </div>
                <div>
                    <label class="block text-xs font-medium text-gray-700 mb-1">Link URL</label>
                    <input type="url" name="link" required
                        class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none theme-focus"
                        placeholder="https://example.com">
                </div>
                <button type="submit"
                    class="w-full btn-theme px-4 py-2.5 text-sm rounded-lg font-medium transition-all">
                    Add Image
                </button>
            </form>
        </div>
    </div>
</body>

</html>