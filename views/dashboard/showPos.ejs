<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>POS System</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50">
    <div class="flex h-screen p-4 gap-4">
      <!-- LEFT: Menu Items -->
      <div
        class="w-2/3 bg-white rounded-2xl shadow-sm p-6 overflow-y-auto border border-gray-100"
      >
        <!-- Search and Filter -->
        <div class="mb-6 flex items-center gap-4">
          <div class="flex-1">
            <input
              type="text"
              id="searchInput"
              placeholder="Search your menu item here"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-400"
            />
          </div>
          <button
            id="resetSearchBtn"
            class="px-6 py-3 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 flex items-center gap-2"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
              />
            </svg>
            Reset
          </button>
        </div>

        <!-- Category Tabs -->
        <div class="mb-6 flex gap-2 flex-wrap">
          <button
            class="category-btn px-6 py-2 bg-gray-900 text-white rounded-full"
            data-category="all"
          >
            Show All
          </button>

          <% if (categories && categories.length > 0) { %> <%
          categories.forEach(category => { %>
          <button
            class="category-btn px-6 py-2 bg-white border border-gray-300 text-gray-700 rounded-full hover:bg-gray-50"
            data-category="<%= category.slug || category._id %>"
          >
            <%= category.name %>
          </button>
          <% }) %> <% } %>
        </div>

        <!-- Menu Items Grid -->
        <div
          id="menuGrid"
          class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4"
        >
          <% if (menuItems && menuItems.length > 0) { %> <%
          menuItems.forEach(item => { %>
          <div
            class="menu-item bg-white rounded-lg p-4 shadow-sm border border-gray-100 hover:shadow-lg transition cursor-pointer"
            data-category="<%= item.category ? (item.category.slug || item.category._id) : '' %>"
            data-name="<%= item.itemName ? item.itemName.toLowerCase() : '' %>"
            data-id="<%= item._id %>"
            data-item='<%- JSON.stringify({
                  id: item._id,
                  name: item.itemName || "Unnamed Item",
                  price: item.price || 0,
                  type: item.type || "Veg"
                }) %>'
          >
            <div class="flex justify-between items-start mb-2">
              <% if (item.type === "Veg") { %>
              <span
                class="w-5 h-5 border-2 border-green-600 flex items-center justify-center"
              >
                <span class="w-2 h-2 bg-green-600 rounded-full"></span>
              </span>
              <% } else if (item.type === "Non Veg") { %>
              <span
                class="w-5 h-5 border-2 border-red-600 flex items-center justify-center"
              >
                <span class="w-2 h-2 bg-red-600 rounded-full"></span>
              </span>
              <% } else { %>
              <span
                class="w-5 h-5 border-2 border-yellow-600 flex items-center justify-center"
              >
                <span class="w-2 h-2 bg-yellow-600 rounded-full"></span>
              </span>
              <% } %>
            </div>

            <div class="text-center">
              <img
                src="<%= item.menuItemImage?.url || '/images/placeholder.png' %>"
                alt="<%= item.itemName || 'Item' %>"
                class="w-20 h-20 mx-auto object-cover mb-3"
              />
              <h3 class="font-semibold text-gray-800 mb-1 truncate">
                <%= item.itemName || 'Unnamed Item' %>
              </h3>
              <p class="text-lg font-bold text-gray-900">
                ₹<%= item.price ? item.price.toFixed(2) : '0.00' %>
              </p>
            </div>
          </div>
          <% }) %> <% } else { %>
          <div class="col-span-full text-center py-12 text-gray-500">
            No menu items available
          </div>
          <% } %>
        </div>
      </div>

      <!-- RIGHT: Order Section -->
      <div
        class="w-1/3 bg-white rounded-2xl shadow-sm p-6 border border-gray-100 flex flex-col"
      >
        <!-- Header -->
        <div class="mb-6 border-b border-gray-200 pb-4">
          <div class="flex justify-between items-center mb-4">
            <div class="flex items-center gap-2">
              <svg
                class="w-6 h-6 text-gray-700"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                />
              </svg>
              <span class="text-lg font-semibold text-gray-800"
                >Order #<%= orderNumber %></span
              >
            </div>
            <button
              class="px-4 py-2 bg-gray-100 rounded-lg hover:bg-gray-200 text-sm font-medium"
            >
              Assign Table
            </button>
          </div>

          <!-- Service Type -->
          <div class="flex gap-4 mb-3">
            <label class="flex items-center gap-2 cursor-pointer">
              <input
                type="radio"
                name="serviceType"
                value="dine-in"
                checked
                class="w-4 h-4 text-orange-500"
              />
              <span class="text-sm font-medium">Dine In</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
              <input
                type="radio"
                name="serviceType"
                value="delivery"
                class="w-4 h-4 text-orange-500"
              />
              <span class="text-sm font-medium">Delivery</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
              <input
                type="radio"
                name="serviceType"
                value="pickup"
                class="w-4 h-4 text-orange-500"
              />
              <span class="text-sm font-medium">Pickup</span>
            </label>
          </div>

          <!-- Pax & Customer -->
          <div class="flex items-center gap-4">
            <label class="text-sm text-gray-600">Pax</label>
            <input
              type="number"
              id="paxCount"
              value="1"
              min="1"
              class="w-20 px-3 py-2 border border-gray-300 rounded-lg text-sm"
            />
            <select
              id="customerSelect"
              class="flex-1 px-3 py-2 border border-gray-300 rounded-lg text-sm"
            >
              <option>Walk-in Customer</option>
            </select>
          </div>
        </div>

        <!-- Items -->
        <div class="flex-1 overflow-y-auto mb-6">
          <table class="w-full">
            <thead class="bg-gray-50 sticky top-0">
              <tr class="text-left text-sm text-gray-600">
                <th class="px-4 py-3">ITEM</th>
                <th class="px-4 py-3 text-center">QTY</th>
                <th class="px-4 py-3 text-right">PRICE</th>
                <th class="px-4 py-3 text-right">AMOUNT</th>
                <th></th>
              </tr>
            </thead>
            <tbody id="orderItems">
              <tr>
                <td colspan="5" class="text-center py-12 text-gray-500">
                  No items yet
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- Summary -->
        <div class="border-t border-gray-200 pt-4">
          <div class="space-y-2 mb-4">
            <div class="flex justify-between text-gray-600 text-sm">
              <span>Items</span>
              <span id="itemCount">0</span>
            </div>
            <div class="flex justify-between text-gray-600 text-sm">
              <span>Sub Total</span>
              <span id="subTotal">₹0.00</span>
            </div>
            <div
              class="flex justify-between text-xl font-bold pt-2 border-t border-gray-200"
            >
              <span>Total</span>
              <span id="totalAmount">₹0.00</span>
            </div>
          </div>

          <div class="grid grid-cols-2 gap-3">
            <button
              class="kot-btn px-6 py-3 bg-gray-800 text-white rounded-lg hover:bg-gray-900"
            >
              KOT
            </button>

            <button
              class="bill-btn px-6 py-3 bg-orange-500 text-white rounded-lg hover:bg-orange-600"
            >
              BILL
            </button>
            <button
              class="pay-btn px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700"
            >
              Bill & Pay
            </button>
            <button
              class="print-btn px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
            >
              Bill & Print
            </button>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
