<div class="space-y-6">
  <!-- Header Section -->
  <div class="flex items-center justify-between pb-4 border-b border-gray-200">
    <div>
      <h2 class="text-2xl font-bold text-gray-900">Statistics Overview</h2>
      <p class="text-sm text-gray-500 mt-1">Real-time restaurant analytics</p>
    </div>
    <div class="flex items-center gap-2 px-4 py-2 bg-gray-50 rounded-lg border border-gray-200">
      <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
      <span class="text-sm font-medium text-gray-700">
        <%= new Date().toLocaleDateString('en-US', { weekday: 'long' , day: '2-digit' , month: 'short' }) %>,
          <%= new Date().toLocaleTimeString('en-US', { hour: '2-digit' , minute: '2-digit' , hour12: true }) %>
      </span>
    </div>
  </div>

  <!-- Statistics Cards Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">

    <!-- Today's Restaurant Count -->
    <div
      class="bg-gradient-to-br from-orange-50 to-white border border-orange-100 rounded-xl shadow-sm hover:shadow-md transition-shadow p-6">
      <div class="flex items-start justify-between mb-4">
        <div class="flex-1">
          <p class="text-sm font-medium text-gray-600 mb-1">Today's Registrations</p>
          <h3 class="text-3xl font-bold text-gray-900">
            <%= stats.todayCount %>
          </h3>
        </div>
        <div class="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center shadow-sm">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
        </div>
      </div>
      <div class="flex items-center gap-1">
        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-orange-100 text-orange-700">
          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd"
              d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z"
              clip-rule="evenodd" />
          </svg>
          0% vs yesterday
        </span>
      </div>
    </div>

    <!-- Total Restaurant Count -->
    <div
      class="bg-gradient-to-br from-blue-50 to-white border border-blue-100 rounded-xl shadow-sm hover:shadow-md transition-shadow p-6">
      <div class="flex items-start justify-between mb-4">
        <div class="flex-1">
          <p class="text-sm font-medium text-gray-600 mb-1">Total Restaurants</p>
          <h3 class="text-3xl font-bold text-gray-900">
            <%= stats.totalCount %>
          </h3>
        </div>
        <div class="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center shadow-sm">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
        </div>
      </div>
      <div class="flex items-center gap-1">
        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-700">
          All time count
        </span>
      </div>
    </div>

    <!-- Total Free Restaurant Count -->
    <div
      class="bg-gradient-to-br from-green-50 to-white border border-green-100 rounded-xl shadow-sm hover:shadow-md transition-shadow p-6">
      <div class="flex items-start justify-between mb-4">
        <div class="flex-1">
          <p class="text-sm font-medium text-gray-600 mb-1">Free Plan Users</p>
          <h3 class="text-3xl font-bold text-gray-900">
            <%= stats.freeCount %>
          </h3>
        </div>
        <div class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center shadow-sm">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7" />
          </svg>
        </div>
      </div>
      <div class="flex items-center gap-1">
        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-700">
          Trial & Free tier
        </span>
      </div>
    </div>

    <!-- Total Paid Restaurant Count -->
    <div
      class="bg-gradient-to-br from-purple-50 to-white border border-purple-100 rounded-xl shadow-sm hover:shadow-md transition-shadow p-6">
      <div class="flex items-start justify-between mb-4">
        <div class="flex-1">
          <p class="text-sm font-medium text-gray-600 mb-1">Premium Users</p>
          <h3 class="text-3xl font-bold text-gray-900">
            <%= stats.paidCount %>
          </h3>
        </div>
        <div class="w-12 h-12 bg-purple-500 rounded-lg flex items-center justify-center shadow-sm">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
      <div class="flex items-center gap-1">
        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-700">
          Active subscriptions
        </span>
      </div>
    </div>

  </div>
</div>