              class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50 popup-overlay">
              <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-sm w-full mx-4 popup-content">
                <div class="flex flex-col items-center">
                  <!-- Success Icon -->
                  <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center success-pulse">
                    <svg class="w-12 h-12 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>

                  <!-- Success Message -->
                  <h3 class="mt-6 text-2xl font-bold text-gray-800">Waiter Notified!</h3>
                  <p class="mt-3 text-center text-gray-600">Our staff will be with you shortly</p>

                  <!-- Table Info -->
                  <div class="mt-4 bg-orange-50 px-4 py-2 rounded-lg">
                    <p class="text-sm text-orange-700 font-medium">Table: <span id="waiterTableCode">--</span></p>
                  </div>

                  <!-- Close Button -->
                  <button onclick="closeWaiterSuccessPopup()"
                    class="mt-6 w-full bg-orange-500 text-white py-3 rounded-xl font-semibold hover:bg-orange-600 transition-all shadow-lg">
                    Got it!
                  </button>
                </div>
              </div>
            </div>

            <!-- Error Popup -->
            <div id="waiterErrorPopup"
              class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50 popup-overlay">
              <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-sm w-full mx-4 popup-content">
                <div class="flex flex-col items-center">
                  <!-- Error Icon -->
                  <div class="w-20 h-20 bg-red-100 rounded-full flex items-center justify-center">
                    <svg class="w-12 h-12 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                      </path>
                    </svg>
                  </div>

                  <!-- Error Message -->
                  <h3 class="mt-6 text-2xl font-bold text-gray-800">Oops!</h3>
                  <p id="waiterErrorMessage" class="mt-3 text-center text-gray-600">Something went wrong</p>

                  <!-- Close Button -->
                  <button onclick="closeWaiterErrorPopup()"
                    class="mt-6 w-full bg-gray-500 text-white py-3 rounded-xl font-semibold hover:bg-gray-600 transition-all shadow-lg">
                    Close
                  </button>
                </div>
              </div>
            </div>
            <script>
              // ==================== WAITER REQUEST CONFIGURATION ====================
              // Change this empty string to your actual base URL or remove it completely
              const WAITER_API_BASE_URL = 'https://techdine-pos-software.onrender.com';

              // ==================== HELPER FUNCTIONS ====================

              // Extract branch ID from URL path
              function getBranchIdFromURL() {
                const pathParts = window.location.pathname.split('/');
                const restaurantIndex = pathParts.indexOf('restaurant');
                if (restaurantIndex !== -1 && pathParts[restaurantIndex + 1]) {
                  return pathParts[restaurantIndex + 1];
                }
                return null;
              }

              // Extract table code from URL
              function getTableCodeFromURL() {
                const urlParams = new URLSearchParams(window.location.search);
                return urlParams.get('tableCode');
              }

              // Extract table ID from URL
              function getTableIdFromURL() {
                const urlParams = new URLSearchParams(window.location.search);
                return urlParams.get('table');
              }

              // Show popup
              function showWaiterPopup(popupId) {
                const popup = document.getElementById(popupId);
                if (popup) {
                  popup.classList.remove('hidden');
                  popup.classList.add('flex');
                }
              }

              // Hide popup
              function hideWaiterPopup(popupId) {
                const popup = document.getElementById(popupId);
                if (popup) {
                  popup.classList.add('hidden');
                  popup.classList.remove('flex');
                }
              }

              // Close success popup
              function closeWaiterSuccessPopup() {
                hideWaiterPopup('waiterSuccessPopup');
              }

              // Close error popup
              function closeWaiterErrorPopup() {
                hideWaiterPopup('waiterErrorPopup');
              }

              // Show error popup
              function showWaiterError(message) {
                const errorMessageEl = document.getElementById('waiterErrorMessage');
                if (errorMessageEl) {
                  errorMessageEl.textContent = message;
                }
                showWaiterPopup('waiterErrorPopup');
              }

              // ==================== MAIN CALL WAITER FUNCTION ====================

              async function callWaiter(event) {
                const tableCode = getTableCodeFromURL();
                const branchId = getBranchIdFromURL();
                const tableId = getTableIdFromURL();

                console.log(' Call Waiter Debug:', {
                  tableCode,
                  branchId,
                  tableId,
                  fullURL: `${WAITER_API_BASE_URL}/waiterRequest/${branchId}/create`
                });

                // Validation
                if (!tableCode) {
                  showWaiterError('Table code not found in URL. Please scan the QR code again.');
                  return;
                }

                if (!branchId) {
                  showWaiterError('Branch information not found. Please scan the QR code again.');
                  return;
                }

                // Show loading popup
                showWaiterPopup('waiterLoadingPopup');

                try {
                  const requestBody = { tableCode };

                  // Include table ID if available
                  if (tableId) {
                    requestBody.tableId = tableId;
                  }

                  console.log(' Sending waiter request:', requestBody);

                  const response = await fetch(`${WAITER_API_BASE_URL}/waiterRequest/${branchId}/create`, {
                    method: 'POST',
                    headers: {
                      'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(requestBody),
                  });

                  const data = await response.json();
                  console.log(' Waiter request response:', data);

                  // Hide loading popup
                  hideWaiterPopup('waiterLoadingPopup');

                  if (response.ok && data.success) {
                    // Show success popup
                    const tableCodeEl = document.getElementById('waiterTableCode');
                    if (tableCodeEl) {
                      tableCodeEl.textContent = tableCode;
                    }
                    showWaiterPopup('waiterSuccessPopup');

                    // Add bell ring animation to button
                    const callWaiterBtn = event.target.closest('button');
                    if (callWaiterBtn) {
                      const bellIcon = callWaiterBtn.querySelector('svg');
                      if (bellIcon) {
                        bellIcon.classList.add('bell-ring');
                        setTimeout(() => bellIcon.classList.remove('bell-ring'), 500);
                      }
                    }

                    // Auto-close after 5 seconds
                    setTimeout(() => {
                      closeWaiterSuccessPopup();
                    }, 5000);

                    // Call your existing notification if it exists
                    if (typeof showNotification === 'function') {
                      showNotification("Waiter has been notified!");
                    }
                  } else {
                    // Show error popup
                    showWaiterError(data.message || 'Failed to notify waiter. Please try again.');
                  }
                } catch (error) {
                  console.error(' Error calling waiter:', error);
                  hideWaiterPopup('waiterLoadingPopup');
                  showWaiterError('Network error. Please check your connection and try again.');
                }
              }

              // ==================== EVENT LISTENERS ====================

              // Close popups when clicking outside
              document.addEventListener('click', function (event) {
                const popups = ['waiterLoadingPopup', 'waiterSuccessPopup', 'waiterErrorPopup'];
                popups.forEach(popupId => {
                  const popup = document.getElementById(popupId);
                  if (popup && event.target === popup) {
                    hideWaiterPopup(popupId);
                  }
                });
              });
            </script>
            <script src="/js/pages/customer-dashboard.js"></script>
