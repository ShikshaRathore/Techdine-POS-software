<!-- views/includes/landing-site-content.ejs -->
<div class="space-y-6" style="--tc:<%= themeColor %>;">
  <h2 class="text-2xl font-bold" style="color: var(--tc);">
    Landing Site
  </h2>

  <div class="bg-white rounded-lg shadow-sm p-6 max-w-2xl border"
    style="border-color: color-mix(in srgb, var(--tc) 25%, white);">

    <h3 class="text-lg font-semibold mb-4" style="color: var(--tc);">
      Disable Landing Site
    </h3>

    <p class="text-sm text-gray-600 mb-4">
      Disable the landing site or set your custom landing site.
    </p>

    <div class="space-y-4">

      <!-- Toggle Checkbox -->
      <div class="flex items-center gap-3">
        <input type="checkbox" id="disableLanding" class="w-4 h-4 border-gray-300 rounded focus:ring-2"
          style="accent-color: var(--tc); --tw-ring-color: var(--tc);" />
        <label for="disableLanding" class="text-sm font-medium text-gray-700">
          Disable Landing Site
        </label>
      </div>

      <!-- Landing Site Type -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">
          Landing Site Type
        </label>

        <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2"
          style="--tw-ring-color: var(--tc);">
          <option value="custom">Custom</option>
          <option value="default">Theme</option>
        </select>
      </div>

      <!-- Save Button -->
      <button class="px-6 py-2 text-white font-medium rounded-lg transition-colors shadow-sm"
        style="background: var(--tc);">
        Save
      </button>

    </div>
  </div>
</div>