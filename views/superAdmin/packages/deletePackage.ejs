<!-- DELETE CONFIRMATION MODAL -->
<div
  id="deletePackageModal"
  class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4"
>
  <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full">
    <div class="p-6">
      <!-- Warning Icon -->
      <div
        class="flex items-center justify-center w-16 h-16 mx-auto bg-red-100 rounded-full mb-4"
      >
        <svg
          class="w-8 h-8 text-red-600"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
          />
        </svg>
      </div>

      <!-- Title -->
      <h3 class="text-xl font-bold text-gray-900 text-center mb-2">
        Delete Package?
      </h3>

      <!-- Message -->
      <p class="text-gray-600 text-center mb-6">
        Are you sure you want to delete "<span
          id="delete_packageName"
          class="font-semibold text-gray-900"
        ></span
        >"? This action cannot be undone.
      </p>

      <!-- Form -->
      <form id="deletePackageForm" method="POST">
        <input type="hidden" name="_method" value="DELETE" />

        <!-- Buttons -->
        <div class="flex gap-3">
          <button
            type="button"
            onclick="closeDeleteModal()"
            class="flex-1 px-4 py-2.5 bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium rounded-lg transition"
          >
            Cancel
          </button>
          <button
            type="submit"
            class="flex-1 px-4 py-2.5 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg transition"
          >
            Delete
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  function openDeleteModal(pkg) {
    document.getElementById("deletePackageModal").classList.remove("hidden");
    document.getElementById("delete_packageName").textContent = pkg.name;

    // Set the form action with the package ID in the URL
    document.getElementById(
      "deletePackageForm"
    ).action = `/admin-dashboard/packages/delete/${pkg._id}`;
  }

  function closeDeleteModal() {
    document.getElementById("deletePackageModal").classList.add("hidden");
  }

  // Close modal when clicking outside
  document
    .getElementById("deletePackageModal")
    ?.addEventListener("click", function (e) {
      if (e.target === this) {
        closeDeleteModal();
      }
    });
</script>
