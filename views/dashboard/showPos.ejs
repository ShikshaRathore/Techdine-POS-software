<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>POS System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      /* Mobile-first custom styles */
      @media (max-width: 768px) {
        .cart-section {
          position: fixed;
          bottom: 0;
          left: 0;
          right: 0;
          transform: translateY(calc(100% - 60px));
          transition: transform 0.3s ease;
          z-index: 50;
          max-height: 90vh;
          box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.15);
        }
        .cart-section.open {
          transform: translateY(0);
        }
        .backdrop {
          display: none;
          position: fixed;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
          background: rgba(0, 0, 0, 0.5);
          z-index: 40;
        }
        .backdrop.active {
          display: block;
        }
        .menu-section {
          padding-bottom: 80px;
        }
      }
    </style>
  </head>
  <body class="bg-gray-50">
    <!-- Mobile Backdrop -->
    <div class="backdrop md:hidden" id="cartBackdrop"></div>

    <div class="flex flex-col md:flex-row md:h-screen md:p-4 md:gap-4">
      <!-- LEFT: Menu Items -->
      <div
        class="menu-section w-full md:w-2/3 bg-white md:rounded-2xl md:shadow-sm p-4 md:p-6 md:overflow-y-auto md:border md:border-gray-100"
      >
        <!-- Search and Filter -->
        <div class="mb-4 md:mb-6 flex items-center gap-2 md:gap-4">
          <div class="flex-1">
            <input
              type="text"
              id="searchInput"
              placeholder="Search menu..."
              class="w-full px-3 md:px-4 py-2 md:py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-400 text-sm md:text-base"
            />
          </div>
          <button
            id="resetSearchBtn"
            class="px-3 md:px-6 py-2 md:py-3 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 flex items-center gap-2"
          >
            <svg
              class="w-4 h-4 md:w-5 md:h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
              />
            </svg>
            <span class="hidden md:inline">Reset</span>
          </button>
        </div>

        <!-- Category Tabs (Horizontal scroll on mobile) -->
        <div class="mb-4 md:mb-6 overflow-x-auto">
          <div class="flex gap-2 min-w-max md:flex-wrap pb-2">
            <button
              class="category-btn px-4 md:px-6 py-2 bg-gray-900 text-white rounded-full text-sm whitespace-nowrap"
              data-category="all"
            >
              Show All
            </button>

            <% if (categories && categories.length > 0) { %> <%
            categories.forEach(category => { %>
            <button
              class="category-btn px-4 md:px-6 py-2 bg-white border border-gray-300 text-gray-700 rounded-full hover:bg-gray-50 text-sm whitespace-nowrap"
              data-category="<%= category.slug || category._id %>"
            >
              <%= category.name %>
            </button>
            <% }) %> <% } %>
          </div>
        </div>

        <!-- Menu Items Grid (2 cols mobile, 4 cols desktop) -->
        <div
          id="menuGrid"
          class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3 md:gap-4"
        >
          <% if (menuItems && menuItems.length > 0) { %> <%
          menuItems.forEach(item => { %>
          <div
            class="menu-item bg-white rounded-lg p-3 md:p-4 shadow-sm border border-gray-100 hover:shadow-lg active:scale-95 transition cursor-pointer"
            data-category="<%= item.category ? (item.category.slug || item.category._id) : '' %>"
            data-name="<%= item.itemName ? item.itemName.toLowerCase() : '' %>"
            data-id="<%= item._id %>"
            data-item='<%- JSON.stringify({
                  id: item._id,
                  name: item.itemName || "Unnamed Item",
                  price: item.price || 0,
                  type: item.type || "Veg"
                }) %>'
          >
            <div class="flex justify-between items-start mb-2">
              <% if (item.type === "Veg") { %>
              <span
                class="w-4 h-4 md:w-5 md:h-5 border-2 border-green-600 flex items-center justify-center"
              >
                <span
                  class="w-1.5 h-1.5 md:w-2 md:h-2 bg-green-600 rounded-full"
                ></span>
              </span>
              <% } else if (item.type === "Non Veg") { %>
              <span
                class="w-4 h-4 md:w-5 md:h-5 border-2 border-red-600 flex items-center justify-center"
              >
                <span
                  class="w-1.5 h-1.5 md:w-2 md:h-2 bg-red-600 rounded-full"
                ></span>
              </span>
              <% } else { %>
              <span
                class="w-4 h-4 md:w-5 md:h-5 border-2 border-yellow-600 flex items-center justify-center"
              >
                <span
                  class="w-1.5 h-1.5 md:w-2 md:h-2 bg-yellow-600 rounded-full"
                ></span>
              </span>
              <% } %>
            </div>

            <div class="text-center">
              <img
                src="<%= item.menuItemImage?.url || '/images/placeholder.png' %>"
                alt="<%= item.itemName || 'Item' %>"
                class="w-16 h-16 md:w-20 md:h-20 mx-auto object-cover mb-2 md:mb-3 rounded-lg"
              />
              <h3
                class="font-semibold text-gray-800 text-sm md:text-base mb-1 truncate"
              >
                <%= item.itemName || 'Unnamed Item' %>
              </h3>
              <p class="text-base md:text-lg font-bold text-gray-900">
                ₹<%= item.price ? item.price.toFixed(2) : '0.00' %>
              </p>
            </div>
          </div>
          <% }) %> <% } else { %>
          <div class="col-span-full text-center py-12 text-gray-500">
            No menu items available
          </div>
          <% } %>
        </div>
      </div>

      <!-- RIGHT: Order Section (Bottom sheet on mobile, sidebar on desktop) -->
      <div
        class="cart-section w-full md:w-1/3 bg-white md:rounded-2xl md:shadow-sm p-4 md:p-6 md:border md:border-gray-100 flex flex-col rounded-t-3xl md:rounded-3xl"
      >
        <!-- Mobile: Drag Handle & Toggle -->
        <button
          class="md:hidden w-full flex justify-between items-center mb-3 cursor-pointer"
          id="cartToggle"
        >
          <div class="flex items-center gap-3">
            <div class="w-10 h-1 bg-gray-300 rounded-full"></div>
            <span class="text-sm font-semibold text-gray-600"
              >Tap to view cart</span
            >
          </div>
          <div
            class="flex items-center gap-2 bg-orange-500 text-white px-3 py-1.5 rounded-full"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"
              />
            </svg>
            <span id="mobileItemCount" class="text-sm font-bold">0</span>
          </div>
        </button>

        <!-- Header -->
        <div
          class="mb-4 md:mb-6 border-b border-gray-200 pb-3 md:pb-4"
          data-control-panel
        >
          <div class="flex justify-between items-center mb-3 md:mb-4">
            <div class="flex items-center gap-2">
              <svg
                class="w-5 h-5 md:w-6 md:h-6 text-gray-700"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                />
              </svg>
              <span
                class="text-base md:text-lg font-semibold text-gray-800"
                data-order-number
                >Order #<%= orderNumber %></span
              >
            </div>
            <button
              class="px-3 md:px-4 py-1.5 md:py-2 bg-gray-100 rounded-lg hover:bg-gray-200 text-xs md:text-sm font-medium"
            >
              Assign Table
            </button>
          </div>

          <!-- Service Type -->
          <div class="flex gap-3 md:gap-4 mb-3 overflow-x-auto">
            <label
              class="flex items-center gap-2 cursor-pointer whitespace-nowrap"
            >
              <input
                type="radio"
                name="serviceType"
                value="dine-in"
                checked
                class="w-4 h-4 text-orange-500"
              />
              <span class="text-xs md:text-sm font-medium">Dine In</span>
            </label>
            <label
              class="flex items-center gap-2 cursor-pointer whitespace-nowrap"
            >
              <input
                type="radio"
                name="serviceType"
                value="delivery"
                class="w-4 h-4 text-orange-500"
              />
              <span class="text-xs md:text-sm font-medium">Delivery</span>
            </label>
            <label
              class="flex items-center gap-2 cursor-pointer whitespace-nowrap"
            >
              <input
                type="radio"
                name="serviceType"
                value="pickup"
                class="w-4 h-4 text-orange-500"
              />
              <span class="text-xs md:text-sm font-medium">Pickup</span>
            </label>
          </div>

          <!-- Pax & Customer -->
          <div class="flex items-center gap-3 md:gap-4">
            <label class="text-xs md:text-sm text-gray-600 whitespace-nowrap"
              >Pax</label
            >
            <input
              type="number"
              id="paxCount"
              value="1"
              min="1"
              class="w-16 md:w-20 px-2 md:px-3 py-1.5 md:py-2 border border-gray-300 rounded-lg text-xs md:text-sm"
            />
            <select
              id="customerSelect"
              class="flex-1 px-2 md:px-3 py-1.5 md:py-2 border border-gray-300 rounded-lg text-xs md:text-sm"
            >
              <option>Walk-in Customer</option>
            </select>
          </div>
        </div>

        <!-- Items -->
        <div class="flex-1 overflow-y-auto mb-4 md:mb-6">
          <table class="w-full">
            <thead class="bg-gray-50 sticky top-0">
              <tr class="text-left text-xs md:text-sm text-gray-600">
                <th class="px-2 md:px-4 py-2 md:py-3">ITEM</th>
                <th class="px-2 md:px-4 py-2 md:py-3 text-center">QTY</th>
                <th
                  class="px-2 md:px-4 py-2 md:py-3 text-right hidden md:table-cell"
                >
                  PRICE
                </th>
                <th class="px-2 md:px-4 py-2 md:py-3 text-right">AMT</th>
                <th></th>
              </tr>
            </thead>
            <tbody id="orderItems">
              <tr>
                <td
                  colspan="5"
                  class="text-center py-8 md:py-12 text-gray-500 text-sm"
                >
                  No items yet
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- Summary -->
        <div class="border-t border-gray-200 pt-3 md:pt-4">
          <div class="space-y-1.5 md:space-y-2 mb-3 md:mb-4">
            <div class="flex justify-between text-gray-600 text-xs md:text-sm">
              <span>Items</span>
              <span id="itemCount">0</span>
            </div>
            <div class="flex justify-between text-gray-600 text-xs md:text-sm">
              <span>Sub Total</span>
              <span id="subTotal">₹0.00</span>
            </div>
            <div
              class="flex justify-between text-lg md:text-xl font-bold pt-2 border-t border-gray-200"
            >
              <span>Total</span>
              <span id="totalAmount">₹0.00</span>
            </div>
          </div>

          <div class="grid grid-cols-2 gap-2 md:gap-3" data-action-buttons>
            <button
              class="kot-btn px-4 md:px-6 py-2.5 md:py-3 bg-gray-800 text-white rounded-lg hover:bg-gray-900 text-sm md:text-base font-medium"
            >
              KOT
            </button>

            <button
              class="bill-btn px-4 md:px-6 py-2.5 md:py-3 bg-orange-500 text-white rounded-lg hover:bg-orange-600 text-sm md:text-base font-medium"
            >
              BILL
            </button>
            <button
              class="pay-btn px-4 md:px-6 py-2.5 md:py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 text-sm md:text-base font-medium"
            >
              Bill & Pay
            </button>
            <button
              class="print-btn px-4 md:px-6 py-2.5 md:py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 text-sm md:text-base font-medium"
            >
              Bill & Print
            </button>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
