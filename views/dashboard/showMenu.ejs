<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Rajbhog - Restaurant Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <style>
    body {
      font-family: "Inter", sans-serif;
    }

    .modal {
      display: none;
      position: fixed;
      z-index: 50;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      animation: fadeIn 0.2s ease-in;
    }

    .modal.active {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .modal-content {
      animation: slideIn 0.3s ease-out;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }

      to {
        opacity: 1;
      }
    }

    @keyframes slideIn {
      from {
        transform: translateY(-20px);
        opacity: 0;
      }

      to {
        transform: translateY(0);
        opacity: 1;
      }
    }
  </style>
</head>

<body class="bg-gray-50">
  <div class="p-3 sm:p-4 lg:p-5 max-w-7xl mx-auto">
    <!-- Compact Header -->
    <div class="mb-4">
      <h1 class="text-xl sm:text-2xl font-bold text-gray-900">
        Menus for Branch
      </h1>
    </div>

    <!-- Search and Add -->
    <div class="flex flex-col sm:flex-row items-stretch sm:items-center justify-between gap-2 mb-4">
      <div class="flex-1 w-full sm:max-w-md">
        <input type="text" id="searchInput" placeholder="Search your menu here"
          class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:outline-none" />
      </div>
      <form action="/addMenu/<%= branchId %>" method="GET">
        <button
          class="w-full sm:w-auto bg-orange-600 hover:bg-orange-700 text-white font-semibold px-4 py-2 text-sm rounded-lg transition">
          Add Menu
        </button>
      </form>
    </div>

    <!-- Menu Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-2 sm:gap-3 mb-4">
      <% menus.forEach((menu, index)=> { %>
        <div
          class="menu-card bg-white border border-gray-200 rounded-lg p-3 cursor-pointer hover:border-orange-500 hover:shadow-md active:scale-95 transition duration-200 <%= index === 0 ? 'border-orange-500 shadow-md' : '' %>"
          data-menu-id="<%= menu._id %>" onclick="showMenuItems('<%= menu._id %>')">
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-gray-700 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <div>
              <h3 class="text-sm font-bold text-gray-900">
                <%= menu.menuName %>
              </h3>
              <p class="text-gray-500 text-xs">
                <%= items.filter(i=> i.menu && i.menu._id.toString() ===
                  menu._id.toString()).length %> Item(s)
              </p>
            </div>
          </div>
        </div>
        <% }) %>
    </div>

    <!-- Menu Item Section -->
    <% menus.forEach((menu, index)=> { %> <div class="menu-section bg-white
      rounded-lg shadow-sm border border-gray-200 p-4 mb-4" data-menu-id="<%=
      menu._id %>" style=`<%=index===0 ? '' : 'display: none;' %>` >
        <div
          class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-2 mb-4 pb-3 border-b border-gray-200">
          <h2 class="text-lg sm:text-xl font-bold text-gray-900">
            <%= menu.menuName %>
          </h2>
          <div class="flex gap-2">
            <button type="button" onclick="openUpdateModal('<%= menu._id %>', '<%= menu.menuName %>')"
              class="flex items-center px-3 py-1.5 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 transition">
              Update
            </button>

            <button type="button" onclick="openDeleteModal('<%= menu._id %>', '<%= menu.menuName %>')"
              class="flex items-center px-3 py-1.5 text-sm border border-red-300 text-red-600 rounded-lg hover:bg-red-50 transition">
              Delete
            </button>
          </div>
        </div>

        <!-- Table Header -->
        <div
          class="hidden md:grid md:grid-cols-12 gap-3 mb-3 text-xs font-semibold text-gray-600 uppercase tracking-wider">
          <div class="col-span-4">Item Name</div>
          <div class="col-span-2">Price</div>
          <div class="col-span-2">Category</div>
          <div class="col-span-2">Type</div>
          <div class="col-span-2 text-right">Action</div>
        </div>

        <!-- Items -->
        <div class="space-y-2">
          <% items.filter(item=> item.menu && item.menu._id.toString() ===
            menu._id.toString()).forEach(item => { %>
            <div
              class="menu-item border border-gray-200 rounded-lg p-3 md:p-0 md:border-0 md:border-t md:border-gray-100 hover:bg-gray-50 transition"
              data-item-name="<%= item.itemName.toLowerCase() %>"
              data-category="<%= item.category && item.category.name ? item.category.name.toLowerCase() : '' %>"
              data-type="<%= item.type.toLowerCase() %>">
              <div class="hidden md:grid md:grid-cols-12 gap-3 items-center py-3">
                <!-- Image + Details -->
                <div class="col-span-4 flex items-center">
                  <div
                    class="w-10 h-10 bg-gray-100 rounded-lg mr-3 flex items-center justify-center overflow-hidden flex-shrink-0">
                    <% if (item.menuItemImage && item.menuItemImage.url) { %>
                      <img src="<%= item.menuItemImage.url %>" alt="<%= item.itemName %>"
                        class="w-full h-full object-cover" />
                      <% } else { %>
                        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                        </svg>
                        <% } %>
                  </div>
                  <div class="min-w-0">
                    <h4 class="font-semibold text-sm text-gray-900 truncate">
                      <%= item.itemName %>
                    </h4>
                    <% if (item.description) { %>
                      <p class="text-xs text-gray-500 truncate">
                        <%= item.description %>
                      </p>
                      <% } %>
                  </div>
                </div>

                <!-- Price -->
                <div class="col-span-2 text-sm">₹<%= item.price %>
                </div>

                <!-- Category -->
                <div class="col-span-2 text-sm">
                  <%= item.category && item.category.name ? item.category.name : '—' %>
                </div>

                <!-- Type -->
                <div class="col-span-2">
                  <span
                    class="px-2 py-0.5 rounded-full text-xs font-medium <%= item.type === 'Veg' ? 'bg-green-100 text-green-700' : item.type === 'Non Veg' ? 'bg-red-100 text-red-700' : 'bg-yellow-100 text-yellow-700' %>">
                    <%= item.type %>
                  </span>
                </div>

                <!-- Actions -->
                <div class="col-span-2 flex justify-end gap-2">
                  <a href="/dashboard/menu-items/edit/<%= item._id %>"
                    class="px-2 py-1 text-xs border border-gray-300 rounded-lg hover:bg-gray-50 transition flex items-center gap-1 text-gray-700">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                    Update
                  </a>
                  <form action="/dashboard/menu-items/delete/<%= item._id %>" method="GET" class="inline">
                    <button type="submit"
                      class="px-2 py-1 text-xs border border-red-300 text-red-600 rounded-lg hover:bg-red-50 transition flex items-center gap-1">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                      Delete
                    </button>
                  </form>
                </div>
              </div>

              <!-- Mobile View -->
              <div class="md:hidden space-y-2">
                <div class="flex items-center">
                  <div
                    class="w-12 h-12 bg-gray-100 rounded-lg mr-3 flex items-center justify-center overflow-hidden flex-shrink-0">
                    <% if (item.menuItemImage && item.menuItemImage.url) { %>
                      <img src="<%= item.menuItemImage.url %>" alt="<%= item.itemName %>"
                        class="w-full h-full object-cover" />
                      <% } else { %>
                        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                        </svg>
                        <% } %>
                  </div>
                  <div class="flex-1 min-w-0">
                    <h4 class="font-semibold text-sm text-gray-900">
                      <%= item.itemName %>
                    </h4>
                    <p class="text-sm text-gray-600">₹<%= item.price %>
                    </p>
                  </div>
                </div>
                <div class="flex items-center justify-between text-xs">
                  <span class="text-gray-600">
                    <%= item.category && item.category.name ? item.category.name : '—' %>
                  </span>
                  <span
                    class="px-2 py-0.5 rounded-full font-medium <%= item.type === 'Veg' ? 'bg-green-100 text-green-700' : item.type === 'Non Veg' ? 'bg-red-100 text-red-700' : 'bg-yellow-100 text-yellow-700' %>">
                    <%= item.type %>
                  </span>
                </div>
                <div class="flex gap-2 pt-2">
                  <a href="/dashboard/menu-items/edit/<%= item._id %>"
                    class="flex-1 px-3 py-1.5 text-xs border border-gray-300 rounded-lg hover:bg-gray-50 transition text-center">
                    Update
                  </a>
                  <form action="/dashboard/menu-items/delete/<%= item._id %>" method="GET" class="flex-1">
                    <button type="submit"
                      class="w-full px-3 py-1.5 text-xs border border-red-300 text-red-600 rounded-lg hover:bg-red-50 transition">
                      Delete
                    </button>
                  </form>
                </div>
              </div>
            </div>
            <% }) %>
        </div>
      </div>
      <% }) %>

        <!-- Update Menu Modal -->
        <div id="updateModal" class="modal">
          <div class="modal-content bg-white rounded-xl shadow-2xl p-6 max-w-md w-full mx-4">
            <div class="flex items-start mb-4">
              <div class="flex-shrink-0 w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-gray-900 mb-1">Update Menu</h3>
                <p class="text-sm text-gray-600">Edit menu name</p>
              </div>
              <button onclick="closeUpdateModal()" class="text-gray-400 hover:text-gray-600 transition">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>

            <form id="updateMenuForm" method="POST">
              <div class="mb-5">
                <label for="updateMenuName" class="block text-sm font-semibold text-gray-700 mb-2">Menu Name</label>
                <input type="text" id="updateMenuName" name="menuName" required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition text-base" />
              </div>

              <div class="flex gap-3 justify-end">
                <button type="button" onclick="closeUpdateModal()"
                  class="px-5 py-2.5 text-base font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition">
                  Cancel
                </button>
                <button type="submit"
                  class="px-5 py-2.5 text-base font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition">
                  Save Changes
                </button>
              </div>
            </form>
          </div>
        </div>

        <!-- Delete Menu Modal -->
        <div id="deleteModal" class="modal">
          <div class="modal-content bg-white rounded-xl shadow-2xl p-6 max-w-md w-full mx-4">
            <div class="flex items-start mb-4">
              <div class="flex-shrink-0 w-12 h-12 rounded-full bg-red-100 flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-gray-900 mb-1">Delete Menu</h3>
                <p class="text-sm text-gray-600">This action cannot be undone</p>
              </div>
              <button onclick="closeDeleteModal()" class="text-gray-400 hover:text-gray-600 transition">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>

            <div class="mb-5">
              <p class="text-base text-gray-700">Are you sure you want to delete the menu <strong
                  id="deleteMenuNameDisplay" class="text-gray-900"></strong>?</p>
            </div>

            <form id="deleteMenuForm" method="POST">
              <div class="flex gap-3 justify-end">
                <button type="button" onclick="closeDeleteModal()"
                  class="px-5 py-2.5 text-base font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition">
                  Cancel
                </button>
                <button type="submit"
                  class="px-5 py-2.5 text-base font-medium text-white bg-red-600 rounded-lg hover:bg-red-700 transition">
                  Delete Menu
                </button>
              </div>
            </form>
          </div>
        </div>
  </div>

</body>

</html>